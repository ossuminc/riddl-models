// Policy Management - Shared Types
type PolicyId is Id(PolicyContext.Policy)  with {
  briefly "Policy identifier"
  described as {
    |Unique identifier for a policy.
  }
}
type PolicyholderId is UUID with {
  briefly "Policyholder identifier"
  described as {
    |Reference to a policyholder.
  }
}
type QuoteId is UUID with {
  briefly "Quote identifier"
  described as {
    |Reference to a quote.
  }
}
type EndorsementId is UUID with {
  briefly "Endorsement identifier"
  described as {
    |Reference to an endorsement.
  }
}
type ClaimId is UUID with {
  briefly "Claim identifier"
  described as {
    |Reference to a claim.
  }
}
type PolicyStatus is any of {
  Quoted,
  Bound,
  Active,
  Suspended,
  Cancelled,
  Expired,
  NonRenewed
} with {
  briefly "Policy status"
  described as {
    |Current policy status.
  }
}
type PolicyType is any of {
  Homeowners,
  Auto,
  Commercial,
  Umbrella,
  Renters,
  Flood
} with {
  briefly "Policy type"
  described as {
    |Type of insurance policy.
  }
}
type PaymentFrequency is any of {
  Annual,
  SemiAnnual,
  Quarterly,
  Monthly
} with {
  briefly "Payment frequency"
  described as {
    |Premium payment frequency.
  }
}
type CancellationReason is any of {
  Nonpayment,
  Underwriting,
  PolicyholderRequest,
  Fraud,
  RiskChange
} with {
  briefly "Cancellation reason"
  described as {
    |Reason for cancellation.
  }
}
type PolicyholderInfo is {
  policyholderId: PolicyholderId with {
    briefly "Policyholder"
    described as {
      |Policyholder identifier.
    }
  }
  firstName: String(1,100) with {
    briefly "First name"
    described as {
      |First name.
    }
  }
  lastName: String(1,100) with {
    briefly "Last name"
    described as {
      |Last name.
    }
  }
  email: String(5,254) with {
    briefly "Email"
    described as {
      |Email address.
    }
  }
  phone: String(7,20) with {
    briefly "Phone"
    described as {
      |Phone number.
    }
  }
  address: AddressInfo with {
    briefly "Address"
    described as {
      |Mailing address.
    }
  }
  dateOfBirth: Date with {
    briefly "DOB"
    described as {
      |Date of birth.
    }
  }
} with {
  briefly "Policyholder info"
  described as {
    |Policyholder information.
  }
}
type AddressInfo is {
  street: String(1,200) with {
    briefly "Street"
    described as {
      |Street address.
    }
  }
  city: String(1,100) with {
    briefly "City"
    described as {
      |City.
    }
  }
  state: String(2,2) with {
    briefly "State"
    described as {
      |State code.
    }
  }
  zipCode: String(5,10) with {
    briefly "ZIP"
    described as {
      |ZIP code.
    }
  }
  country: String(2,2) with {
    briefly "Country"
    described as {
      |Country code.
    }
  }
} with {
  briefly "Address info"
  described as {
    |Physical address.
  }
}
type CoverageInfo is {
  coverageType: String(1,100) with {
    briefly "Type"
    described as {
      |Coverage type.
    }
  }
  limit: Decimal(15,2) with {
    briefly "Limit"
    described as {
      |Coverage limit.
    }
  }
  deductible: Decimal(10,2) with {
    briefly "Deductible"
    described as {
      |Deductible amount.
    }
  }
  coveragePremium: Decimal(10,2) with {
    briefly "Coverage Premium"
    described as {
      |Coverage premium.
    }
  }
} with {
  briefly "Coverage info"
  described as {
    |Insurance coverage details.
  }
}
type InsuredProperty is {
  propertyType: String(1,50) with {
    briefly "Type"
    described as {
      |Property type.
    }
  }
  address: AddressInfo with {
    briefly "Address"
    described as {
      |Property address.
    }
  }
  value: Decimal(15,2) with {
    briefly "Value"
    described as {
      |Property value.
    }
  }
  yearBuilt: Natural with {
    briefly "Year built"
    described as {
      |Construction year.
    }
  }
  squareFeet: Natural with {
    briefly "Square feet"
    described as {
      |Property size.
    }
  }
  features: String(1,100)* with {
    briefly "Features"
    described as {
      |Property features.
    }
  }
} with {
  briefly "Insured property"
  described as {
    |Property being insured.
  }
}
type PremiumInfo is {
  basePremium: Decimal(10,2) with {
    briefly "Base"
    described as {
      |Base premium.
    }
  }
  discounts: Decimal(10,2)* with {
    briefly "Discounts"
    described as {
      |Applied discounts.
    }
  }
  fees: Decimal(10,2) with {
    briefly "Fees"
    described as {
      |Policy fees.
    }
  }
  taxes: Decimal(10,2) with {
    briefly "Taxes"
    described as {
      |Premium taxes.
    }
  }
  totalPremium: Decimal(10,2) with {
    briefly "Total"
    described as {
      |Total premium.
    }
  }
  currency: String(3,3) with {
    briefly "Currency"
    described as {
      |Currency code.
    }
  }
} with {
  briefly "Premium info"
  described as {
    |Premium calculation details.
  }
}
type PolicyPeriod is {
  effectiveDate: Date with {
    briefly "Effective"
    described as {
      |Coverage start date.
    }
  }
  expirationDate: Date with {
    briefly "Expiration"
    described as {
      |Coverage end date.
    }
  }
  term: Natural with {
    briefly "Term"
    described as {
      |Policy term in months.
    }
  }
} with {
  briefly "Policy period"
  described as {
    |Coverage period.
  }
}
type EndorsementInfo is {
  endorsementId: EndorsementId with {
    briefly "Endorsement"
    described as {
      |Endorsement identifier.
    }
  }
  effectiveDate: Date with {
    briefly "Effective"
    described as {
      |Endorsement effective date.
    }
  }
  description: String(1,500) with {
    briefly "Description"
    described as {
      |Change description.
    }
  }
  premiumChange: Decimal(10,2) with {
    briefly "Premium change"
    described as {
      |Premium adjustment.
    }
  }
  coverageChanges: CoverageInfo+ with {
    briefly "Coverage changes"
    described as {
      |Modified coverages.
    }
  }
} with {
  briefly "Endorsement info"
  described as {
    |Policy endorsement details.
  }
}
type RenewalInfo is {
  renewalPremium: PremiumInfo with {
    briefly "Premium"
    described as {
      |Renewal premium.
    }
  }
  renewalPeriod: PolicyPeriod with {
    briefly "Period"
    described as {
      |Renewal period.
    }
  }
  renewalCoverageChanges: CoverageInfo* with {
    briefly "Changes"
    described as {
      |Coverage changes.
    }
  }
  offerExpiresAt: Date with {
    briefly "Expires"
    described as {
      |Offer expiration.
    }
  }
} with {
  briefly "Renewal info"
  described as {
    |Policy renewal details.
  }
}
type CancellationInfo is {
  reason: CancellationReason with {
    briefly "Reason"
    described as {
      |Cancellation reason.
    }
  }
  effectiveDate: Date with {
    briefly "Effective"
    described as {
      |Cancellation effective date.
    }
  }
  refundAmount: Decimal(10,2) with {
    briefly "Refund"
    described as {
      |Premium refund amount.
    }
  }
  requestedBy: String(1,200) with {
    briefly "Requested by"
    described as {
      |Person requesting cancellation.
    }
  }
} with {
  briefly "Cancellation info"
  described as {
    |Policy cancellation details.
  }
}
