// Tenant Provisioning - Shared Types
type TenantId is Id(TenantContext.Tenant)  with {
  briefly "Tenant identifier"
  described as {
    |Unique identifier for a tenant.
  }
}
type OrganizationId is UUID with {
  briefly "Organization identifier"
  described as {
    |Reference to organization.
  }
}
type UserId is UUID with {
  briefly "User identifier"
  described as {
    |Reference to a user.
  }
}
type ResourceId is UUID with {
  briefly "Resource identifier"
  described as {
    |Reference to a provisioned resource.
  }
}
type TenantStatus is any of {
  Pending,
  Provisioning,
  Active,
  Suspended,
  Decommissioning,
  Decommissioned
} with {
  briefly "Tenant status"
  described as {
    |Current tenant lifecycle status.
  }
}
type TenantTier is any of {
  Free,
  Starter,
  Professional,
  Enterprise,
  Custom
} with {
  briefly "Tenant tier"
  described as {
    |Service tier level.
  }
}
type ResourceType is any of {
  Database,
  Storage,
  Compute,
  Cache,
  Queue,
  Search,
  CDN
} with {
  briefly "Resource type"
  described as {
    |Type of infrastructure resource.
  }
}
type ResourceStatus is any of {
  Pending,
  Provisioning,
  Ready,
  Updating,
  Failed,
  Deleting
} with {
  briefly "Resource status"
  described as {
    |Status of provisioned resource.
  }
}
type OrganizationInfo is {
  organizationId: OrganizationId with {
    briefly "Organization"
    described as {
      |Organization identifier.
    }
  }
  name: String(1,200) with {
    briefly "Name"
    described as {
      |Organization name.
    }
  }
  domain: String(1,253) with {
    briefly "Domain"
    described as {
      |Organization domain.
    }
  }
  industry: String(1,100)? with {
    briefly "Industry"
    described as {
      |Industry sector.
    }
  }
  size: String(1,50)? with {
    briefly "Size"
    described as {
      |Organization size.
    }
  }
} with {
  briefly "Organization info"
  described as {
    |Organization details.
  }
}
type AdminInfo is {
  userId: UserId with {
    briefly "User"
    described as {
      |Admin user identifier.
    }
  }
  email: String(5,254) with {
    briefly "Email"
    described as {
      |Admin email.
    }
  }
  name: String(1,200) with {
    briefly "Name"
    described as {
      |Admin name.
    }
  }
} with {
  briefly "Admin info"
  described as {
    |Tenant administrator details.
  }
}
type TenantConfiguration is {
  tier: TenantTier with {
    briefly "Tier"
    described as {
      |Service tier.
    }
  }
  maxUsers: Natural with {
    briefly "Max users"
    described as {
      |Maximum user count.
    }
  }
  maxStorage: Natural with {
    briefly "Max storage"
    described as {
      |Storage limit in GB.
    }
  }
  features: String(1,100)+ with {
    briefly "Features"
    described as {
      |Enabled features.
    }
  }
  updatedCustomDomain: String(1,253)? with {
    briefly "Custom domain"
    described as {
      |Custom domain if configured.
    }
  }
  ssoEnabled: Boolean with {
    briefly "SSO enabled"
    described as {
      |Single sign-on enabled.
    }
  }
} with {
  briefly "Tenant configuration"
  described as {
    |Tenant settings and limits.
  }
}
type ProvisionedResource is {
  resourceId: ResourceId with {
    briefly "Resource"
    described as {
      |Resource identifier.
    }
  }
  resourceType: ResourceType with {
    briefly "Type"
    described as {
      |Resource type.
    }
  }
  name: String(1,100) with {
    briefly "Name"
    described as {
      |Resource name.
    }
  }
  resourceStatus: ResourceStatus with {
    briefly "Status"
    described as {
      |Resource status.
    }
  }
  updatedEndpoint: String(1,500)? with {
    briefly "Endpoint"
    described as {
      |Resource endpoint URL.
    }
  }
  provisionedAt: TimeStamp with {
    briefly "Provisioned"
    described as {
      |Provisioning time.
    }
  }
} with {
  briefly "Provisioned resource"
  described as {
    |Infrastructure resource details.
  }
}
type ScalingPolicy is {
  minInstances: Natural with {
    briefly "Min instances"
    described as {
      |Minimum instance count.
    }
  }
  maxInstances: Natural with {
    briefly "Max instances"
    described as {
      |Maximum instance count.
    }
  }
  targetCpuPercent: Natural with {
    briefly "Target CPU"
    described as {
      |Target CPU utilization percent.
    }
  }
  scaleUpThreshold: Natural with {
    briefly "Scale up"
    described as {
      |Scale up threshold.
    }
  }
  scaleDownThreshold: Natural with {
    briefly "Scale down"
    described as {
      |Scale down threshold.
    }
  }
} with {
  briefly "Scaling policy"
  described as {
    |Auto-scaling configuration.
  }
}
type DecommissionReason is {
  reason: String(1,200) with {
    briefly "Reason"
    described as {
      |Decommission reason.
    }
  }
  requestedBy: UserId with {
    briefly "Requested by"
    described as {
      |User requesting decommission.
    }
  }
  effectiveDate: Date with {
    briefly "Effective"
    described as {
      |Decommission effective date.
    }
  }
  dataRetentionDays: Natural with {
    briefly "Retention"
    described as {
      |Data retention period in days.
    }
  }
} with {
  briefly "Decommission reason"
  described as {
    |Tenant decommission details.
  }
}
