// Multi-Tenant Management - Shared Types
type EmailAddress is String(5,254) with {
  briefly "Email address"
  described as {
    |An email address.
  }
}
type TenantId is Id(TenantContext.Tenant)  with {
  briefly "Tenant identifier"
  described as {
    |Unique identifier for a tenant.
  }
}
type TenantUserId is UUID with {
  briefly "Tenant user identifier"
  described as {
    |Reference to a user within a tenant.
  }
}
type TenantStatus is any of {
  Provisioning,
  Active,
  Suspended,
  Deactivating,
  Deactivated
} with {
  briefly "Tenant status"
  described as {
    |Tenant lifecycle status.
  }
}
type TenantTier is any of {
  Free,
  Starter,
  Professional,
  Enterprise,
  Custom
} with {
  briefly "Tenant tier"
  described as {
    |Service tier level.
  }
}
type IsolationLevel is any of {
  SharedDatabase,
  SharedSchema,
  DedicatedSchema,
  DedicatedDatabase
} with {
  briefly "Isolation level"
  described as {
    |Data isolation strategy.
  }
}
type TenantInfo is {
  tenantName: String(1,200) with {
    briefly "Name"
    described as {
      |Tenant name.
    }
  }
  subdomain: String(1,63) with {
    briefly "Subdomain"
    described as {
      |Tenant subdomain.
    }
  }
  tier: TenantTier with {
    briefly "Tier"
    described as {
      |Service tier.
    }
  }
  isolationLevel: IsolationLevel with {
    briefly "Isolation"
    described as {
      |Data isolation level.
    }
  }
  primaryContact: String(1,100) with {
    briefly "Contact"
    described as {
      |Primary contact.
    }
  }
  contactEmail: EmailAddress with {
    briefly "Email"
    described as {
      |Contact email.
    }
  }
} with {
  briefly "Tenant info"
  described as {
    |Tenant organization details.
  }
}
type TenantLimits is {
  maxUsers: Natural with {
    briefly "Max users"
    described as {
      |Maximum users allowed.
    }
  }
  maxStorage: Natural with {
    briefly "Max storage"
    described as {
      |Max storage in GB.
    }
  }
  maxApiCalls: Natural with {
    briefly "Max API"
    described as {
      |Max API calls per month.
    }
  }
  maxProjects: Natural? with {
    briefly "Max projects"
    described as {
      |Max projects allowed.
    }
  }
  features: String(1,50)+ with {
    briefly "Features"
    described as {
      |Enabled features.
    }
  }
} with {
  briefly "Tenant limits"
  described as {
    |Resource limits and quotas.
  }
}
type TenantSettings is {
  timezone: String(1,50) with {
    briefly "Timezone"
    described as {
      |Default timezone.
    }
  }
  locale: String(1,10) with {
    briefly "Locale"
    described as {
      |Default locale.
    }
  }
  dateFormat: String(1,20) with {
    briefly "Date format"
    described as {
      |Date display format.
    }
  }
  mfaRequired: Boolean with {
    briefly "MFA required"
    described as {
      |Require MFA.
    }
  }
  ssoEnabled: Boolean with {
    briefly "SSO enabled"
    described as {
      |SSO integration enabled.
    }
  }
  customBranding: Boolean with {
    briefly "Branding"
    described as {
      |Custom branding enabled.
    }
  }
} with {
  briefly "Tenant settings"
  described as {
    |Tenant configuration settings.
  }
}
type TenantUsage is {
  currentUsers: Natural with {
    briefly "Users"
    described as {
      |Current user count.
    }
  }
  storageUsed: Decimal(12,2) with {
    briefly "Storage"
    described as {
      |Storage used in GB.
    }
  }
  apiCallsThisMonth: Natural with {
    briefly "API calls"
    described as {
      |API calls this month.
    }
  }
  lastActivityAt: TimeStamp with {
    briefly "Last activity"
    described as {
      |Last activity time.
    }
  }
} with {
  briefly "Tenant usage"
  described as {
    |Resource usage metrics.
  }
}
type TenantUserInfo is {
  userId: TenantUserId with {
    briefly "User"
    described as {
      |User identifier.
    }
  }
  email: EmailAddress with {
    briefly "Email"
    described as {
      |User email.
    }
  }
  role: String(1,50) with {
    briefly "Role"
    described as {
      |User role.
    }
  }
  active: Boolean with {
    briefly "Active"
    described as {
      |Is active.
    }
  }
  lastLogin: TimeStamp? with {
    briefly "Last login"
    described as {
      |Last login time.
    }
  }
} with {
  briefly "Tenant user info"
  described as {
    |User within tenant.
  }
}
type CustomDomain is {
  domainName: String(1,255) with {
    briefly "Domain"
    described as {
      |Custom domain name.
    }
  }
  verified: Boolean with {
    briefly "Verified"
    described as {
      |Domain verified.
    }
  }
  sslEnabled: Boolean with {
    briefly "SSL"
    described as {
      |SSL enabled.
    }
  }
  certExpiry: Date? with {
    briefly "Cert expiry"
    described as {
      |Certificate expiration.
    }
  }
} with {
  briefly "Custom domain"
  described as {
    |Custom domain configuration.
  }
}
