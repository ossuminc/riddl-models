// CI/CD Pipeline Domain Model
// Continuous integration and deployment automation
domain CICDPipeline is {
  author OssumInc is {
    name = "Ossum Inc."
    email = "support@ossuminc.com"
  } with {
    briefly "Domain author"
    described as {
      |Organization maintaining this domain model.
    }
  }
  user Developer is "person committing code changes" with {
    briefly "Developer"
    described as {
      |Person writing and committing code.
    }
  }
  user DevOpsEngineer is "person managing pipelines" with {
    briefly "DevOps Engineer"
    described as {
      |Person configuring and maintaining pipelines.
    }
  }
  user ReleaseManager is "person approving deployments" with {
    briefly "Release Manager"
    described as {
      |Person authorizing production releases.
    }
  }
  epic PipelineEpic is {
    user Developer wants to "to deploy code changes reliably" so that "features reach users quickly and safely"
    case TriggerBuild is {
      user Developer wants to "to trigger a build from code commit" so that "changes are validated automatically"
      step is "Developer pushes" "code commit" "to repository" with {
        briefly "Push commit"
        described as {
          |Commit code changes.
        }
      }
      step is "System detects" "commit webhook" "and starts pipeline" with {
        briefly "Detect webhook"
        described as {
          |Trigger pipeline.
        }
      }
      step send command PipelineContext.Pipeline.StartPipeline from user Developer to entity PipelineContext.Pipeline with {
        briefly "Start pipeline"
        described as {
          |Begin pipeline execution.
        }
      }
      step is "System reports" "build status" "to developer" with {
        briefly "Report status"
        described as {
          |Notify build result.
        }
      }
    } with {
      briefly "Build triggering"
      described as {
        |Automated build from code commit.
      }
    }
  } with {
    briefly "Pipeline management"
    described as {
      | Epic covering CI/CD pipeline execution,
      | build automation, and deployment workflows.
    }
  }
  include "PipelineContext.riddl"
  include "external-contexts.riddl"
} with {
  briefly "CI/CD pipeline domain"
  described as {
    | The CICDPipeline domain handles continuous integration
    | and deployment automation for software delivery.
  }
}
