// Hospital Admission/Discharge - Shared Types
type AdmissionId is Id(AdmissionContext.Admission)  with {
  briefly "Admission identifier"
  described as {
    |Unique identifier for a hospital admission.
  }
}
type BedId is UUID with {
  briefly "Bed identifier"
  described as {
    |Unique identifier for a hospital bed.
  }
}
type UnitId is UUID with {
  briefly "Unit identifier"
  described as {
    |Unique identifier for a hospital unit or floor.
  }
}
type PatientId is UUID with {
  briefly "Patient identifier"
  described as {
    |Reference to patient record in registration system.
  }
}
type PhysicianId is UUID with {
  briefly "Physician identifier"
  described as {
    |Reference to attending physician.
  }
}
type AdmissionStatus is any of {
  Pending,
  Admitted,
  Transferred,
  Discharged,
  Deceased
} with {
  briefly "Admission status"
  described as {
    |Current status of the patient admission.
  }
}
type AdmissionType is any of {
  Emergency,
  Urgent,
  Elective,
  Newborn,
  Trauma,
  Observation
} with {
  briefly "Admission type"
  described as {
    |Category of hospital admission.
  }
}
type AccommodationType is any of {
  Private,
  SemiPrivate,
  Ward,
  ICU,
  StepDown,
  Isolation,
  Pediatric,
  Maternity
} with {
  briefly "Accommodation type"
  described as {
    |Type of room or bed accommodation.
  }
}
type DischargeDisposition is any of {
  Home,
  HomeCare,
  SkilledNursingFacility,
  RehabFacility,
  LongTermAcuteCare,
  AnotherHospital,
  Hospice,
  AMA,
  Expired
} with {
  briefly "Discharge disposition"
  described as {
    |Where patient goes after discharge.
  }
}
type PatientCondition is any of {
  Critical,
  Serious,
  Fair,
  Good,
  Stable
} with {
  briefly "Patient condition"
  described as {
    |Current medical condition assessment.
  }
}
type AdmissionInfo is {
  admissionId: AdmissionId with {
    briefly "Admission ID"
    described as {
      |Unique admission identifier.
    }
  }
  patientId: PatientId with {
    briefly "Patient"
    described as {
      |Patient being admitted.
    }
  }
  admissionType: AdmissionType with {
    briefly "Type"
    described as {
      |Type of admission.
    }
  }
  admittingPhysicianId: PhysicianId with {
    briefly "Admitting physician"
    described as {
      |Physician ordering admission.
    }
  }
  attendingPhysicianId: PhysicianId with {
    briefly "Attending physician"
    described as {
      |Primary physician responsible for care.
    }
  }
  admitDiagnosis: String(1,500) with {
    briefly "Admit diagnosis"
    described as {
      |Primary reason for admission.
    }
  }
  admitDateTime: TimeStamp with {
    briefly "Admit date/time"
    described as {
      |When patient was admitted.
    }
  }
  expectedLOS: Natural? with {
    briefly "Expected LOS"
    described as {
      |Expected length of stay in days.
    }
  }
  insuranceVerified: Boolean with {
    briefly "Insurance verified"
    described as {
      |Whether insurance has been verified.
    }
  }
} with {
  briefly "Admission information"
  described as {
    |Core admission details.
  }
}
type BedAssignment is {
  bedId: BedId with {
    briefly "Bed"
    described as {
      |Assigned bed identifier.
    }
  }
  unitId: UnitId with {
    briefly "Unit"
    described as {
      |Hospital unit containing the bed.
    }
  }
  unitName: String(1,100) with {
    briefly "Unit name"
    described as {
      |Name of hospital unit.
    }
  }
  roomNumber: String(1,20) with {
    briefly "Room"
    described as {
      |Room number.
    }
  }
  bedNumber: String(1,10) with {
    briefly "Bed"
    described as {
      |Bed designation within room.
    }
  }
  accommodationType: AccommodationType with {
    briefly "Accommodation"
    described as {
      |Type of bed accommodation.
    }
  }
  assignedAt: TimeStamp with {
    briefly "Assigned"
    described as {
      |When bed was assigned.
    }
  }
} with {
  briefly "Bed assignment"
  described as {
    |Patient bed assignment details.
  }
}
type TransferRequest is {
  requestId: UUID with {
    briefly "Request ID"
    described as {
      |Transfer request identifier.
    }
  }
  fromUnitId: UnitId with {
    briefly "From unit"
    described as {
      |Current unit.
    }
  }
  toUnitId: UnitId with {
    briefly "To unit"
    described as {
      |Destination unit.
    }
  }
  reason: String(1,500) with {
    briefly "Reason"
    described as {
      |Reason for transfer.
    }
  }
  priority: String(1,20) with {
    briefly "Priority"
    described as {
      |Transfer urgency.
    }
  }
  requestedBy: PhysicianId with {
    briefly "Requested by"
    described as {
      |Physician requesting transfer.
    }
  }
  requestedAt: TimeStamp with {
    briefly "Requested"
    described as {
      |When transfer was requested.
    }
  }
} with {
  briefly "Transfer request"
  described as {
    |Request to transfer patient between units.
  }
}
type DischargeOrder is {
  orderedBy: PhysicianId with {
    briefly "Ordered by"
    described as {
      |Discharging physician.
    }
  }
  disposition: DischargeDisposition with {
    briefly "Disposition"
    described as {
      |Discharge destination.
    }
  }
  dischargeDiagnoses: String(1,500)+ with {
    briefly "Diagnoses"
    described as {
      |Discharge diagnoses.
    }
  }
  dischargeInstructions: String(1,5000) with {
    briefly "Instructions"
    described as {
      |Patient discharge instructions.
    }
  }
  followUpRequired: Boolean with {
    briefly "Follow-up"
    described as {
      |Whether follow-up appointment needed.
    }
  }
  followUpDays: Natural? with {
    briefly "Follow-up days"
    described as {
      |Days until follow-up appointment.
    }
  }
  medicationsReconciled: Boolean with {
    briefly "Meds reconciled"
    described as {
      |Whether medications have been reconciled.
    }
  }
  orderedAt: TimeStamp with {
    briefly "Ordered"
    described as {
      |When discharge was ordered.
    }
  }
} with {
  briefly "Discharge order"
  described as {
    |Physician discharge order details.
  }
}
type LengthOfStay is {
  admitDateTime: TimeStamp with {
    briefly "Admit"
    described as {
      |Admission date/time.
    }
  }
  dischargeDateTime: TimeStamp with {
    briefly "Discharge"
    described as {
      |Discharge date/time.
    }
  }
  totalDays: Natural with {
    briefly "Days"
    described as {
      |Total days in hospital.
    }
  }
  icuDays: Natural? with {
    briefly "ICU days"
    described as {
      |Days in intensive care.
    }
  }
  observationHours: Natural? with {
    briefly "Obs hours"
    described as {
      |Hours in observation status.
    }
  }
} with {
  briefly "Length of stay"
  described as {
    |Patient length of stay metrics.
  }
}
type TransferHistory is {
  transferId: UUID with {
    briefly "Transfer ID"
    described as {
      |Transfer record identifier.
    }
  }
  fromBed: BedAssignment with {
    briefly "From"
    described as {
      |Previous bed assignment.
    }
  }
  toBed: BedAssignment with {
    briefly "To"
    described as {
      |New bed assignment.
    }
  }
  reason: String(1,500) with {
    briefly "Reason"
    described as {
      |Reason for transfer.
    }
  }
  transferredAt: TimeStamp with {
    briefly "Transferred"
    described as {
      |When transfer occurred.
    }
  }
} with {
  briefly "Transfer history"
  described as {
    |Record of a patient transfer.
  }
}
