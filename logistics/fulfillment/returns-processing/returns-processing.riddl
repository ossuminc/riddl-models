// Returns Processing Domain Model
// Product returns and reverse logistics
domain ReturnsProcessing is {
  author OssumInc is {
    name = "Ossum Inc."
    email = "support@ossuminc.com"
  } with {
    briefly "Domain author"
    described as {
      |Organization maintaining this domain model.
    }
  }
  user ReturnsProcessor is "person handling return items" with {
    briefly "Returns Processor"
    described as {
      |Worker processing returned items.
    }
  }
  user QualityInspector is "person inspecting returned items" with {
    briefly "Quality Inspector"
    described as {
      |Inspector evaluating item condition.
    }
  }
  user CustomerServiceAgent is "person handling return requests" with {
    briefly "Customer Service Agent"
    described as {
      |Agent managing customer returns.
    }
  }
  epic ReturnsManagement is {
    user CustomerServiceAgent wants to "to process returns efficiently" so that "customers have a good return experience"
    case ProcessReturn is {
      user CustomerServiceAgent wants to "to handle a customer return" so that "the customer receives their refund"
      step is "Agent creates" "return authorization" "for customer" with {
        briefly "Create RMA"
        described as {
          |Issue return auth.
        }
      }
      step is "System tracks" "return shipment" "to warehouse" with {
        briefly "Track return"
        described as {
          |Monitor shipment.
        }
      }
    } with {
      briefly "Process return"
      described as {
        |Handling customer returns.
      }
    }
  } with {
    briefly "Returns management"
    described as {
      |Epic for returns processing.
    }
  }
  include "ReturnsContext.riddl"
  include "external-contexts.riddl"
} with {
  briefly "Returns processing domain"
  described as {
    |Product returns and reverse logistics.
  }
}
