// Returns Processing Domain Model
// Product returns and reverse logistics

domain ReturnsProcessing is {

  author OssumInc is {
    name is "Ossum Inc."
    email is "support@ossuminc.com"
  } with {
    briefly "Domain author"
    described by "Organization maintaining this domain model."
  }

  user ReturnsProcessor is "person handling return items" with {
    briefly "Returns Processor"
    described by "Worker processing returned items."
  }

  user QualityInspector is "person inspecting returned items" with {
    briefly "Quality Inspector"
    described by "Inspector evaluating item condition."
  }

  user CustomerServiceAgent is "person handling return requests" with {
    briefly "Customer Service Agent"
    described by "Agent managing customer returns."
  }

  epic ReturnsManagement is {
    user CustomerServiceAgent wants "to process returns efficiently"
      so that "customers have a good return experience"

    case ProcessReturn is {
      user CustomerServiceAgent wants "to handle a customer return"
        so that "the customer receives their refund"
      step is "Agent creates" "return authorization" "for customer"
        with { briefly "Create RMA" described by "Issue return auth." }
      step is "System tracks" "return shipment" "to warehouse"
        with { briefly "Track return" described by "Monitor shipment." }
    } with {
      briefly "Process return"
      described by "Handling customer returns."
    }
  } with {
    briefly "Returns management"
    described by "Epic for returns processing."
  }

  include "ReturnsContext.riddl"
  include "external-contexts.riddl"

} with {
  briefly "Returns processing domain"
  described by "Product returns and reverse logistics."
}
