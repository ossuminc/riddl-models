// Order Fulfillment Domain Model
// Pick, pack, ship operations and delivery management

domain OrderFulfillment is {

  author OssumInc is {
    name is "Ossum Inc."
    email is "support@ossuminc.com"
  } with {
    briefly "Domain author"
    described by "Organization maintaining this domain model."
  }

  user WarehouseManager is "person overseeing fulfillment operations" with {
    briefly "Warehouse Manager"
    described by "Manager responsible for fulfillment center operations."
  }

  user PickPackOperator is "person picking and packing orders" with {
    briefly "Pick and Pack Operator"
    described by "Operator handling pick, pack, and ship tasks."
  }

  user ShippingCoordinator is "person coordinating carrier shipments" with {
    briefly "Shipping Coordinator"
    described by "Coordinator managing carrier selection and shipments."
  }

  epic FulfillOrder is {
    user WarehouseManager wants "to fulfill customer orders"
      so that "products are delivered accurately and on time"

    case ProcessNewOrder is {
      user WarehouseManager wants "to process a new fulfillment order"
        so that "items are picked, packed, and shipped"
      step is "System receives" "fulfillment order" "from order management"
        with { briefly "Receive order" described by "Get fulfillment order." }
      step is "Operator picks" "items from inventory" "in warehouse"
        with { briefly "Pick items" described by "Pick order items." }
      step is "Operator packs" "items into shipment" "for carrier"
        with { briefly "Pack shipment" described by "Pack items for shipping." }
      step is "System selects" "carrier and ships" "the package"
        with { briefly "Ship package" described by "Select carrier and ship." }
    } with {
      briefly "Process new fulfillment order"
      described by "End-to-end order fulfillment workflow."
    }
  } with {
    briefly "Order fulfillment"
    described by "Epic for pick, pack, ship order fulfillment."
  }

  include "FulfillmentContext.riddl"
  include "external-contexts.riddl"

} with {
  briefly "Order fulfillment domain"
  described by "Pick, pack, ship operations and delivery management."
}
