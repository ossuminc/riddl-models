// Order Fulfillment Domain Model
// Pick, pack, ship operations and delivery management
domain OrderFulfillment is {
  author OssumInc is {
    name = "Ossum Inc."
    email = "support@ossuminc.com"
  } with {
    briefly "Domain author"
    described as {
      |Organization maintaining this domain model.
    }
  }
  user WarehouseManager is "person overseeing fulfillment operations" with {
    briefly "Warehouse Manager"
    described as {
      |Manager responsible for fulfillment center operations.
    }
  }
  user PickPackOperator is "person picking and packing orders" with {
    briefly "Pick and Pack Operator"
    described as {
      |Operator handling pick, pack, and ship tasks.
    }
  }
  user ShippingCoordinator is "person coordinating carrier shipments" with {
    briefly "Shipping Coordinator"
    described as {
      |Coordinator managing carrier selection and shipments.
    }
  }
  epic FulfillOrder is {
    user WarehouseManager wants to "to fulfill customer orders" so that "products are delivered accurately and on time"
    case ProcessNewOrder is {
      user WarehouseManager wants to "to process a new fulfillment order" so that "items are picked, packed, and shipped"
      step is "System receives" "fulfillment order" "from order management" with {
        briefly "Receive order"
        described as {
          |Get fulfillment order.
        }
      }
      step is "Operator picks" "items from inventory" "in warehouse" with {
        briefly "Pick items"
        described as {
          |Pick order items.
        }
      }
      step is "Operator packs" "items into shipment" "for carrier" with {
        briefly "Pack shipment"
        described as {
          |Pack items for shipping.
        }
      }
      step is "System selects" "carrier and ships" "the package" with {
        briefly "Ship package"
        described as {
          |Select carrier and ship.
        }
      }
    } with {
      briefly "Process new fulfillment order"
      described as {
        |End-to-end order fulfillment workflow.
      }
    }
  } with {
    briefly "Order fulfillment"
    described as {
      |Epic for pick, pack, ship order fulfillment.
    }
  }
  include "FulfillmentContext.riddl"
  include "external-contexts.riddl"
} with {
  briefly "Order fulfillment domain"
  described as {
    |Pick, pack, ship operations and delivery management.
  }
}
