// Order Fulfillment Domain Model
// Supply chain order processing and fulfillment
domain OrderFulfillment is {
  author OssumInc is {
    name = "Ossum Inc."
    email = "support@ossuminc.com"
  } with {
    briefly "Domain author"
    described as {
      |Organization maintaining this domain model.
    }
  }
  user FulfillmentManager is "person overseeing fulfillment operations" with {
    briefly "Fulfillment Manager"
    described as {
      |Manager coordinating order processing.
    }
  }
  user WarehouseWorker is "person picking and packing orders" with {
    briefly "Warehouse Worker"
    described as {
      |Worker executing fulfillment tasks.
    }
  }
  user ShippingCoordinator is "person arranging shipments" with {
    briefly "Shipping Coordinator"
    described as {
      |Coordinator managing shipments.
    }
  }
  epic OrderFulfillmentProcess is {
    user FulfillmentManager wants to "to process orders efficiently" so that "customers receive orders on time"
    case FulfillOrder is {
      user FulfillmentManager wants to "to fulfill customer orders" so that "products are delivered accurately"
      step is "System allocates" "inventory to orders" "by priority" with {
        briefly "Allocate inventory"
        described as {
          |Reserve stock.
        }
      }
      step is "Worker picks" "items from warehouse" "for packing" with {
        briefly "Pick items"
        described as {
          |Retrieve products.
        }
      }
    } with {
      briefly "Fulfill order"
      described as {
        |Processing customer orders.
      }
    }
  } with {
    briefly "Order fulfillment process"
    described as {
      |Epic for fulfillment operations.
    }
  }
  include "FulfillmentContext.riddl"
  include "external-contexts.riddl"
} with {
  briefly "Order fulfillment domain"
  described as {
    |Supply chain order fulfillment management.
  }
}
