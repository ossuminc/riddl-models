// Order Fulfillment Domain Model
// Supply chain order processing and fulfillment

domain OrderFulfillment is {

  author OssumInc is {
    name is "Ossum Inc."
    email is "support@ossuminc.com"
  } with {
    briefly "Domain author"
    described by "Organization maintaining this domain model."
  }

  user FulfillmentManager is "person overseeing fulfillment operations" with {
    briefly "Fulfillment Manager"
    described by "Manager coordinating order processing."
  }

  user WarehouseWorker is "person picking and packing orders" with {
    briefly "Warehouse Worker"
    described by "Worker executing fulfillment tasks."
  }

  user ShippingCoordinator is "person arranging shipments" with {
    briefly "Shipping Coordinator"
    described by "Coordinator managing shipments."
  }

  epic OrderFulfillmentProcess is {
    user FulfillmentManager wants "to process orders efficiently"
      so that "customers receive orders on time"

    case FulfillOrder is {
      user FulfillmentManager wants "to fulfill customer orders"
        so that "products are delivered accurately"
      step is "System allocates" "inventory to orders" "by priority"
        with { briefly "Allocate inventory" described by "Reserve stock." }
      step is "Worker picks" "items from warehouse" "for packing"
        with { briefly "Pick items" described by "Retrieve products." }
    } with {
      briefly "Fulfill order"
      described by "Processing customer orders."
    }
  } with {
    briefly "Order fulfillment process"
    described by "Epic for fulfillment operations."
  }

  include "FulfillmentContext.riddl"
  include "external-contexts.riddl"

} with {
  briefly "Order fulfillment domain"
  described by "Supply chain order fulfillment management."
}
