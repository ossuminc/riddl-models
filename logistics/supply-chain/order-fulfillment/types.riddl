// Order Fulfillment - Shared Types
type FulfillmentOrderId is Id(FulfillmentContext.FulfillmentOrder)  with {
  briefly "Order identifier"
  described as {
    |Unique identifier for a fulfillment order.
  }
}
type SalesOrderId is UUID with {
  briefly "Sales order identifier"
  described as {
    |Reference to originating sales order.
  }
}
type ShipmentId is UUID with {
  briefly "Shipment identifier"
  described as {
    |Reference to a shipment.
  }
}
type WarehouseId is UUID with {
  briefly "Warehouse identifier"
  described as {
    |Reference to a fulfillment warehouse.
  }
}
type OrderStatus is any of {
  Received,
  Allocated,
  Picking,
  Packing,
  ReadyToShip,
  Shipped,
  Delivered,
  Cancelled,
  OnHold
} with {
  briefly "Order status"
  described as {
    |Fulfillment order status.
  }
}
type ShipmentPriority is any of {
  Standard,
  Expedited,
  NextDay,
  SameDay
} with {
  briefly "Shipment priority"
  described as {
    |Delivery urgency level.
  }
}
type AllocationStatus is any of {
  Pending,
  PartiallyAllocated,
  FullyAllocated,
  Backordered
} with {
  briefly "Allocation status"
  described as {
    |Inventory allocation status.
  }
}
type OrderLine is {
  lineNumber: Natural with {
    briefly "Line"
    described as {
      |Line number.
    }
  }
  sku: String(1,50) with {
    briefly "SKU"
    described as {
      |Product SKU.
    }
  }
  productName: String(1,200) with {
    briefly "Product"
    described as {
      |Product name.
    }
  }
  quantityOrdered: Natural with {
    briefly "Ordered"
    described as {
      |Quantity ordered.
    }
  }
  quantityAllocated: Natural with {
    briefly "Allocated"
    described as {
      |Quantity allocated.
    }
  }
  quantityPicked: Natural with {
    briefly "Picked"
    described as {
      |Quantity picked.
    }
  }
  unitPrice: Decimal(10,2) with {
    briefly "Price"
    described as {
      |Unit price.
    }
  }
} with {
  briefly "Order line"
  described as {
    |Fulfillment order line item.
  }
}
type ShippingAddress is {
  recipientName: String(1,100) with {
    briefly "Recipient"
    described as {
      |Recipient name.
    }
  }
  addressLine1: String(1,200) with {
    briefly "Address 1"
    described as {
      |Street address.
    }
  }
  addressLine2: String(1,200)? with {
    briefly "Address 2"
    described as {
      |Additional address.
    }
  }
  city: String(1,100) with {
    briefly "City"
    described as {
      |City.
    }
  }
  state: String(1,50) with {
    briefly "State"
    described as {
      |State/province.
    }
  }
  postalCode: String(1,20) with {
    briefly "Postal"
    described as {
      |Postal code.
    }
  }
  country: String(1,50) with {
    briefly "Country"
    described as {
      |Country.
    }
  }
  phone: String(1,20)? with {
    briefly "Phone"
    described as {
      |Phone number.
    }
  }
} with {
  briefly "Shipping address"
  described as {
    |Delivery address details.
  }
}
type PickTask is {
  taskId: UUID with {
    briefly "Task"
    described as {
      |Pick task ID.
    }
  }
  sku: String(1,50) with {
    briefly "SKU"
    described as {
      |Product SKU.
    }
  }
  location: String(1,50) with {
    briefly "Location"
    described as {
      |Bin location.
    }
  }
  quantityToPick: Natural with {
    briefly "To pick"
    described as {
      |Quantity to pick.
    }
  }
  quantityPicked: Natural with {
    briefly "Picked"
    described as {
      |Quantity picked.
    }
  }
  assignedPickerId: String(1,50)? with {
    briefly "Picker"
    described as {
      |Assigned picker.
    }
  }
  pickCompletedAt: TimeStamp? with {
    briefly "Picked at"
    described as {
      |Pick completion time.
    }
  }
} with {
  briefly "Pick task"
  described as {
    |Item picking task.
  }
}
type PackingSlip is {
  slipNumber: String(1,50) with {
    briefly "Slip"
    described as {
      |Packing slip number.
    }
  }
  items: OrderLine+ with {
    briefly "Items"
    described as {
      |Packed items.
    }
  }
  packedBy: String(1,50) with {
    briefly "Packed by"
    described as {
      |Packer ID.
    }
  }
  packedAt: TimeStamp with {
    briefly "Packed at"
    described as {
      |Packing time.
    }
  }
  weight: Decimal(8,2) with {
    briefly "Weight"
    described as {
      |Package weight lbs.
    }
  }
  dimensions: String(1,50) with {
    briefly "Dimensions"
    described as {
      |Package dimensions.
    }
  }
} with {
  briefly "Packing slip"
  described as {
    |Shipment packing details.
  }
}
type ShipmentInfo is {
  shipmentId: ShipmentId with {
    briefly "Shipment"
    described as {
      |Shipment ID.
    }
  }
  carrier: String(1,100) with {
    briefly "Carrier"
    described as {
      |Shipping carrier.
    }
  }
  serviceLevel: String(1,50) with {
    briefly "Service"
    described as {
      |Service level.
    }
  }
  trackingNumber: String(1,100) with {
    briefly "Tracking"
    described as {
      |Tracking number.
    }
  }
  shippedAt: TimeStamp with {
    briefly "Shipped"
    described as {
      |Ship date/time.
    }
  }
  estimatedDelivery: Date with {
    briefly "Est delivery"
    described as {
      |Estimated delivery.
    }
  }
  shippingCost: Decimal(8,2) with {
    briefly "Cost"
    described as {
      |Shipping cost.
    }
  }
} with {
  briefly "Shipment info"
  described as {
    |Shipment tracking details.
  }
}
