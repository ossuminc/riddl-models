// Inventory Management - Shared Types
type InventoryId is Id(InventoryContext.Inventory)  with {
  briefly "Inventory identifier"
  described as {
    |Unique identifier for an inventory record.
  }
}
type WarehouseId is UUID with {
  briefly "Warehouse identifier"
  described as {
    |Reference to a warehouse.
  }
}
type LocationId is UUID with {
  briefly "Location identifier"
  described as {
    |Reference to a storage location.
  }
}
type ProductId is UUID with {
  briefly "Product identifier"
  described as {
    |Reference to a product.
  }
}
type LotId is UUID with {
  briefly "Lot identifier"
  described as {
    |Reference to a lot or batch.
  }
}
type MovementId is UUID with {
  briefly "Movement identifier"
  described as {
    |Reference to a stock movement.
  }
}
type InventoryStatus is any of {
  Available,
  Reserved,
  Allocated,
  InTransit,
  Quarantine,
  Damaged,
  Expired
} with {
  briefly "Inventory status"
  described as {
    |Current inventory status.
  }
}
type MovementType is any of {
  Receipt,
  Putaway,
  Pick,
  Transfer,
  Adjustment,
  Return,
  Shipment,
  CycleCountMovement
} with {
  briefly "Movement type"
  described as {
    |Type of stock movement.
  }
}
type AdjustmentReason is any of {
  CycleCountAdjustment,
  Damage,
  Expiration,
  Theft,
  Found,
  DataCorrection
} with {
  briefly "Adjustment reason"
  described as {
    |Reason for inventory adjustment.
  }
}
type LocationType is any of {
  Receiving,
  Storage,
  Picking,
  Packing,
  Shipping,
  Returns,
  Quarantine
} with {
  briefly "Location type"
  described as {
    |Type of warehouse location.
  }
}
type ProductInfo is {
  productId: ProductId with {
    briefly "Product"
    described as {
      |Product identifier.
    }
  }
  sku: String(1,50) with {
    briefly "SKU"
    described as {
      |Stock keeping unit.
    }
  }
  name: String(1,200) with {
    briefly "Name"
    described as {
      |Product name.
    }
  }
  category: String(1,100) with {
    briefly "Category"
    described as {
      |Product category.
    }
  }
  unitOfMeasure: String(1,20) with {
    briefly "UOM"
    described as {
      |Unit of measure.
    }
  }
  weight: Decimal(10,4)? with {
    briefly "Weight"
    described as {
      |Unit weight.
    }
  }
  dimensions: DimensionInfo? with {
    briefly "Dimensions"
    described as {
      |Product dimensions.
    }
  }
} with {
  briefly "Product info"
  described as {
    |Product information.
  }
}
type DimensionInfo is {
  length: Decimal(10,2) with {
    briefly "Length"
    described as {
      |Length.
    }
  }
  width: Decimal(10,2) with {
    briefly "Width"
    described as {
      |Width.
    }
  }
  height: Decimal(10,2) with {
    briefly "Height"
    described as {
      |Height.
    }
  }
  unit: String(1,10) with {
    briefly "Unit"
    described as {
      |Dimension unit.
    }
  }
} with {
  briefly "Dimension info"
  described as {
    |Physical dimensions.
  }
}
type LocationInfo is {
  locationId: LocationId with {
    briefly "Location"
    described as {
      |Location identifier.
    }
  }
  code: String(1,50) with {
    briefly "Code"
    described as {
      |Location code.
    }
  }
  zone: String(1,50) with {
    briefly "Zone"
    described as {
      |Warehouse zone.
    }
  }
  aisle: String(1,20) with {
    briefly "Aisle"
    described as {
      |Aisle identifier.
    }
  }
  rack: String(1,20) with {
    briefly "Rack"
    described as {
      |Rack identifier.
    }
  }
  level: String(1,10) with {
    briefly "Level"
    described as {
      |Shelf level.
    }
  }
  locationType: LocationType with {
    briefly "Type"
    described as {
      |Location type.
    }
  }
  capacity: Natural with {
    briefly "Capacity"
    described as {
      |Location capacity.
    }
  }
} with {
  briefly "Location info"
  described as {
    |Storage location information.
  }
}
type LotInfo is {
  lotId: LotId with {
    briefly "Lot"
    described as {
      |Lot identifier.
    }
  }
  lotNumber: String(1,50) with {
    briefly "Lot number"
    described as {
      |Lot/batch number.
    }
  }
  manufactureDate: Date? with {
    briefly "Manufacture date"
    described as {
      |Manufacturing date.
    }
  }
  expirationDate: Date? with {
    briefly "Expiration"
    described as {
      |Expiration date.
    }
  }
  supplier: String(1,200)? with {
    briefly "Supplier"
    described as {
      |Supplier name.
    }
  }
} with {
  briefly "Lot info"
  described as {
    |Lot/batch information.
  }
}
type StockLevel is {
  quantity: Natural with {
    briefly "Quantity"
    described as {
      |Current quantity.
    }
  }
  reservedQuantity: Natural with {
    briefly "Reserved"
    described as {
      |Reserved quantity.
    }
  }
  availableQuantity: Natural with {
    briefly "Available"
    described as {
      |Available quantity.
    }
  }
  unitCost: Decimal(10,4) with {
    briefly "Unit cost"
    described as {
      |Unit cost.
    }
  }
  totalValue: Decimal(15,2) with {
    briefly "Total value"
    described as {
      |Total inventory value.
    }
  }
} with {
  briefly "Stock level"
  described as {
    |Current stock levels.
  }
}
type StockMovement is {
  movementId: MovementId with {
    briefly "Movement"
    described as {
      |Movement identifier.
    }
  }
  movementType: MovementType with {
    briefly "Type"
    described as {
      |Movement type.
    }
  }
  quantity: Natural with {
    briefly "Quantity"
    described as {
      |Movement quantity.
    }
  }
  sourceLocation: LocationInfo? with {
    briefly "From"
    described as {
      |Source location.
    }
  }
  destinationLocation: LocationInfo? with {
    briefly "To"
    described as {
      |Destination location.
    }
  }
  movementReason: String(1,500)? with {
    briefly "Reason"
    described as {
      |Movement reason.
    }
  }
  performedBy: String(1,200) with {
    briefly "Performed by"
    described as {
      |Person performing movement.
    }
  }
  performedAt: TimeStamp with {
    briefly "Performed"
    described as {
      |Movement time.
    }
  }
} with {
  briefly "Stock movement"
  described as {
    |Inventory movement record.
  }
}
type ReceiptInfo is {
  purchaseOrderId: UUID with {
    briefly "PO"
    described as {
      |Purchase order ID.
    }
  }
  quantity: Natural with {
    briefly "Quantity"
    described as {
      |Received quantity.
    }
  }
  lot: LotInfo? with {
    briefly "Lot"
    described as {
      |Lot information.
    }
  }
  condition: String(1,50) with {
    briefly "Condition"
    described as {
      |Item condition.
    }
  }
  receivedBy: String(1,200) with {
    briefly "Received by"
    described as {
      |Receiving person.
    }
  }
} with {
  briefly "Receipt info"
  described as {
    |Stock receipt information.
  }
}
type ReservationInfo is {
  orderId: UUID with {
    briefly "Order"
    described as {
      |Order ID.
    }
  }
  quantity: Natural with {
    briefly "Quantity"
    described as {
      |Reserved quantity.
    }
  }
  expiresAt: TimeStamp with {
    briefly "Expires"
    described as {
      |Reservation expiration.
    }
  }
} with {
  briefly "Reservation info"
  described as {
    |Stock reservation details.
  }
}
type ReplenishmentRequest is {
  toLocation: LocationInfo with {
    briefly "To location"
    described as {
      |Destination location.
    }
  }
  quantity: Natural with {
    briefly "Quantity"
    described as {
      |Requested quantity.
    }
  }
  priority: Natural with {
    briefly "Priority"
    described as {
      |Request priority.
    }
  }
  requestedAt: TimeStamp with {
    briefly "Requested"
    described as {
      |Request time.
    }
  }
} with {
  briefly "Replenishment request"
  described as {
    |Location replenishment request.
  }
}
