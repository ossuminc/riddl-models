// Subscriber Management - Shared Types
type EmailAddress is String(5,254) with {
  briefly "Email address"
  described as {
    |An email address.
  }
}
type SubscriberId is Id(SubscriberContext.Subscriber)  with {
  briefly "Subscriber identifier"
  described as {
    |Unique identifier for a subscriber.
  }
}
type AccountId is UUID with {
  briefly "Account identifier"
  described as {
    |Reference to billing account.
  }
}
type ServiceLineId is UUID with {
  briefly "Service line identifier"
  described as {
    |Reference to a service line.
  }
}
type SubscriberStatus is any of {
  Pending,
  Active,
  Suspended,
  Disconnected,
  Cancelled
} with {
  briefly "Subscriber status"
  described as {
    |Subscriber account status.
  }
}
type AccountType is any of {
  Individual,
  Family,
  SmallBusiness,
  Enterprise
} with {
  briefly "Account type"
  described as {
    |Type of subscriber account.
  }
}
type ServiceType is any of {
  Wireless,
  Landline,
  Internet,
  Television,
  Bundle
} with {
  briefly "Service type"
  described as {
    |Type of telecom service.
  }
}
type PaymentMethod is any of {
  CreditCard,
  DebitCard,
  BankAccount,
  Invoice,
  Prepaid
} with {
  briefly "Payment method"
  described as {
    |Billing payment method.
  }
}
type ContactInfo is {
  firstName: String(1,100) with {
    briefly "First name"
    described as {
      |Contact first name.
    }
  }
  lastName: String(1,100) with {
    briefly "Last name"
    described as {
      |Contact last name.
    }
  }
  email: EmailAddress with {
    briefly "Email"
    described as {
      |Email address.
    }
  }
  phone: String(1,20) with {
    briefly "Phone"
    described as {
      |Phone number.
    }
  }
  address: String(1,300) with {
    briefly "Address"
    described as {
      |Mailing address.
    }
  }
} with {
  briefly "Contact info"
  described as {
    |Subscriber contact information.
  }
}
type ServicePlan is {
  planId: UUID with {
    briefly "Plan"
    described as {
      |Plan identifier.
    }
  }
  planName: String(1,100) with {
    briefly "Name"
    described as {
      |Plan name.
    }
  }
  monthlyRate: Decimal(8,2) with {
    briefly "Rate"
    described as {
      |Monthly rate.
    }
  }
  dataAllowance: Natural? with {
    briefly "Data"
    described as {
      |Data allowance GB.
    }
  }
  minutesAllowance: Natural? with {
    briefly "Minutes"
    described as {
      |Voice minutes.
    }
  }
  features: String(1,100)+ with {
    briefly "Features"
    described as {
      |Included features.
    }
  }
} with {
  briefly "Service plan"
  described as {
    |Subscription plan details.
  }
}
type ServiceLine is {
  lineId: ServiceLineId with {
    briefly "Line"
    described as {
      |Service line ID.
    }
  }
  phoneNumber: String(1,20) with {
    briefly "Phone"
    described as {
      |Phone number.
    }
  }
  serviceType: ServiceType with {
    briefly "Type"
    described as {
      |Service type.
    }
  }
  plan: ServicePlan with {
    briefly "Plan"
    described as {
      |Service plan.
    }
  }
  activatedAt: TimeStamp with {
    briefly "Activated"
    described as {
      |Activation time.
    }
  }
  updatedDeviceId: String(1,50)? with {
    briefly "Device"
    described as {
      |Associated device.
    }
  }
} with {
  briefly "Service line"
  described as {
    |Individual service line.
  }
}
type DeviceInfo is {
  deviceId: String(1,50) with {
    briefly "Device"
    described as {
      |Device identifier.
    }
  }
  manufacturer: String(1,100) with {
    briefly "Make"
    described as {
      |Device manufacturer.
    }
  }
  model: String(1,100) with {
    briefly "Model"
    described as {
      |Device model.
    }
  }
  imei: String(1,20)? with {
    briefly "IMEI"
    described as {
      |Device IMEI.
    }
  }
  updatedSimNumber: String(1,30)? with {
    briefly "SIM"
    described as {
      |SIM card number.
    }
  }
} with {
  briefly "Device info"
  described as {
    |Subscriber device details.
  }
}
type SubscriptionChange is {
  changeId: UUID with {
    briefly "Change"
    described as {
      |Change identifier.
    }
  }
  changeType: String(1,50) with {
    briefly "Type"
    described as {
      |Change type.
    }
  }
  effectiveDate: Date with {
    briefly "Effective"
    described as {
      |Effective date.
    }
  }
  previousValue: String(1,200)? with {
    briefly "Previous"
    described as {
      |Previous value.
    }
  }
  newValue: String(1,200) with {
    briefly "New"
    described as {
      |New value.
    }
  }
  requestedBy: String(1,100) with {
    briefly "Requested by"
    described as {
      |Requester.
    }
  }
} with {
  briefly "Subscription change"
  described as {
    |Plan or service change record.
  }
}
type SupportTicket is {
  ticketId: UUID with {
    briefly "Ticket"
    described as {
      |Ticket identifier.
    }
  }
  category: String(1,50) with {
    briefly "Category"
    described as {
      |Issue category.
    }
  }
  description: String(1,1000) with {
    briefly "Description"
    described as {
      |Issue description.
    }
  }
  priority: String(1,20) with {
    briefly "Priority"
    described as {
      |Ticket priority.
    }
  }
  ticketStatus: String(1,30) with {
    briefly "Status"
    described as {
      |Ticket status.
    }
  }
  createdAt: TimeStamp with {
    briefly "Created"
    described as {
      |Creation time.
    }
  }
} with {
  briefly "Support ticket"
  described as {
    |Customer support ticket.
  }
}
