// Equipment Tracking - Shared Types
type EquipmentId is Id(EquipmentContext.Equipment)  with {
  briefly "Equipment identifier"
  described as {
    |Unique identifier for equipment.
  }
}
type JobSiteId is UUID with {
  briefly "Job site identifier"
  described as {
    |Reference to a job site.
  }
}
type Money is {
  amount: Decimal(10,2) with {
    briefly "Amount"
    described as {
      |Monetary value.
    }
  }
  currency: Currency(USD) with {
    briefly "Currency"
    described as {
      |Currency code.
    }
  }
} with {
  briefly "Monetary value"
  described as {
    |Amount with currency.
  }
}
type EquipmentType is any of {
  HeavyMachinery,
  LightEquipment,
  Vehicles,
  Tools,
  SafetyEquipment
} with {
  briefly "Equipment category"
  described as {
    |Classification of equipment types.
  }
}
type EquipmentStatus is any of {
  AvailableStatus,
  AssignedStatus,
  InTransitStatus,
  MaintenanceStatus,
  OutOfServiceStatus,
  DisposedStatus
} with {
  briefly "Equipment status"
  described as {
    |Current operational status.
  }
}
type Location is {
  latitude: Decimal(9,6) with {
    briefly "Latitude"
    described as {
      |GPS latitude.
    }
  }
  longitude: Decimal(9,6) with {
    briefly "Longitude"
    described as {
      |GPS longitude.
    }
  }
  updatedAddress: String(1,500)? with {
    briefly "Address"
    described as {
      |Physical address.
    }
  }
  updatedSiteId: JobSiteId? with {
    briefly "Site"
    described as {
      |Associated job site.
    }
  }
} with {
  briefly "Geographic location"
  described as {
    |Equipment location data.
  }
}
type MaintenanceType is any of {
  ScheduledMaintenance,
  PreventiveMaintenance,
  RepairMaintenance,
  InspectionMaintenance
} with {
  briefly "Maintenance type"
  described as {
    |Category of maintenance work.
  }
}
type MaintenanceRecord is {
  recordId: UUID with {
    briefly "Record ID"
    described as {
      |Maintenance record ID.
    }
  }
  maintenanceType: MaintenanceType with {
    briefly "Type"
    described as {
      |Type of maintenance.
    }
  }
  description: String(1,2000) with {
    briefly "Description"
    described as {
      |Work performed.
    }
  }
  cost: Money with {
    briefly "Cost"
    described as {
      |Maintenance cost.
    }
  }
  performedBy: String(1,100) with {
    briefly "Performed by"
    described as {
      |Technician name.
    }
  }
  performedAt: TimeStamp with {
    briefly "Date"
    described as {
      |When performed.
    }
  }
  nextDue: Date? with {
    briefly "Next due"
    described as {
      |Next scheduled maintenance.
    }
  }
} with {
  briefly "Maintenance record"
  described as {
    |Record of maintenance work.
  }
}
type MeterReading is {
  hours: Natural with {
    briefly "Hours"
    described as {
      |Operating hours.
    }
  }
  mileage: Natural? with {
    briefly "Mileage"
    described as {
      |Odometer reading.
    }
  }
  recordedAt: TimeStamp with {
    briefly "Recorded"
    described as {
      |When recorded.
    }
  }
} with {
  briefly "Meter reading"
  described as {
    |Equipment usage metrics.
  }
}
type Assignment is {
  siteId: JobSiteId with {
    briefly "Site"
    described as {
      |Job site ID.
    }
  }
  siteName: String(1,200) with {
    briefly "Name"
    described as {
      |Site name.
    }
  }
  assignedAt: TimeStamp with {
    briefly "Assigned"
    described as {
      |Assignment date.
    }
  }
  expectedReturn: Date? with {
    briefly "Return"
    described as {
      |Expected return date.
    }
  }
  assignedBy: String(1,100) with {
    briefly "Assigned by"
    described as {
      |Who assigned.
    }
  }
} with {
  briefly "Site assignment"
  described as {
    |Equipment assignment to job site.
  }
}
