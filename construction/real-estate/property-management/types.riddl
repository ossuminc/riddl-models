// Property Management - Shared Types
type PropertyId is Id(PropertyContext.Property)  with {
  briefly "Property identifier"
  described as {
    |Unique identifier for a property.
  }
}
type UnitId is UUID with {
  briefly "Unit identifier"
  described as {
    |Reference to a rental unit.
  }
}
type TenantId is UUID with {
  briefly "Tenant identifier"
  described as {
    |Reference to a tenant.
  }
}
type LeaseId is UUID with {
  briefly "Lease identifier"
  described as {
    |Reference to a lease.
  }
}
type Money is {
  amount: Decimal(10,2) with {
    briefly "Amount"
    described as {
      |Monetary value.
    }
  }
  currency: Currency(USD) with {
    briefly "Currency"
    described as {
      |Currency code.
    }
  }
} with {
  briefly "Monetary value"
  described as {
    |Amount with currency.
  }
}
type PropertyType is any of {
  Residential,
  Commercial,
  Industrial,
  MixedUse,
  Retail
} with {
  briefly "Property type"
  described as {
    |Classification of property.
  }
}
type UnitStatus is any of {
  Vacant,
  Occupied,
  UnderRenovation,
  Maintenance,
  OffMarket
} with {
  briefly "Unit status"
  described as {
    |Current unit availability.
  }
}
type PropertyInfo is {
  name: String(1,200) with {
    briefly "Name"
    described as {
      |Property name.
    }
  }
  address: String(1,500) with {
    briefly "Address"
    described as {
      |Property address.
    }
  }
  propertyType: PropertyType with {
    briefly "Type"
    described as {
      |Property type.
    }
  }
  totalUnits: Natural with {
    briefly "Units"
    described as {
      |Total unit count.
    }
  }
  yearBuilt: Natural with {
    briefly "Year built"
    described as {
      |Construction year.
    }
  }
  squareFootage: Natural with {
    briefly "Sq ft"
    described as {
      |Total square footage.
    }
  }
} with {
  briefly "Property information"
  described as {
    |Basic property details.
  }
}
type Unit is {
  unitId: UnitId with {
    briefly "Unit ID"
    described as {
      |Unit identifier.
    }
  }
  unitNumber: String(1,20) with {
    briefly "Number"
    described as {
      |Unit number.
    }
  }
  floor: Natural with {
    briefly "Floor"
    described as {
      |Floor number.
    }
  }
  squareFootage: Natural with {
    briefly "Sq ft"
    described as {
      |Unit square footage.
    }
  }
  bedrooms: Natural? with {
    briefly "Beds"
    described as {
      |Bedroom count.
    }
  }
  bathrooms: Decimal(3,1)? with {
    briefly "Baths"
    described as {
      |Bathroom count.
    }
  }
  status: UnitStatus with {
    briefly "Status"
    described as {
      |Unit status.
    }
  }
  monthlyRent: Money with {
    briefly "Rent"
    described as {
      |Monthly rent.
    }
  }
} with {
  briefly "Rental unit"
  described as {
    |Individual unit in property.
  }
}
type TenantInfo is {
  tenantId: TenantId with {
    briefly "Tenant ID"
    described as {
      |Tenant identifier.
    }
  }
  name: String(1,200) with {
    briefly "Name"
    described as {
      |Tenant name.
    }
  }
  email: String(1,100) with {
    briefly "Email"
    described as {
      |Contact email.
    }
  }
  phone: String(1,20) with {
    briefly "Phone"
    described as {
      |Contact phone.
    }
  }
  isCommercial: Boolean with {
    briefly "Commercial"
    described as {
      |Is commercial tenant.
    }
  }
} with {
  briefly "Tenant information"
  described as {
    |Basic tenant details.
  }
}
type Lease is {
  leaseId: LeaseId with {
    briefly "Lease ID"
    described as {
      |Lease identifier.
    }
  }
  unitId: UnitId with {
    briefly "Unit"
    described as {
      |Leased unit.
    }
  }
  tenantId: TenantId with {
    briefly "Tenant"
    described as {
      |Tenant ID.
    }
  }
  startDate: Date with {
    briefly "Start"
    described as {
      |Lease start.
    }
  }
  endDate: Date with {
    briefly "End"
    described as {
      |Lease end.
    }
  }
  monthlyRent: Money with {
    briefly "Rent"
    described as {
      |Monthly rent.
    }
  }
  securityDeposit: Money with {
    briefly "Deposit"
    described as {
      |Security deposit.
    }
  }
  leaseStatus: LeaseStatus with {
    briefly "Status"
    described as {
      |Lease status.
    }
  }
} with {
  briefly "Lease agreement"
  described as {
    |Rental lease details.
  }
}
type LeaseStatus is any of {
  Pending,
  Active,
  Renewed,
  Expired,
  Terminated
} with {
  briefly "Lease status"
  described as {
    |Current lease status.
  }
}
type MaintenanceRequest is {
  requestId: UUID with {
    briefly "Request ID"
    described as {
      |Request identifier.
    }
  }
  unitId: UnitId with {
    briefly "Unit"
    described as {
      |Affected unit.
    }
  }
  category: MaintenanceCategory with {
    briefly "Category"
    described as {
      |Request category.
    }
  }
  description: String(1,2000) with {
    briefly "Description"
    described as {
      |Issue description.
    }
  }
  priority: MaintenancePriority with {
    briefly "Priority"
    described as {
      |Request priority.
    }
  }
  maintenanceStatus: MaintenanceStatus with {
    briefly "Status"
    described as {
      |Request status.
    }
  }
  requestedAt: TimeStamp with {
    briefly "Requested"
    described as {
      |When requested.
    }
  }
  updatedCompletedAt: TimeStamp? with {
    briefly "Completed"
    described as {
      |When completed.
    }
  }
} with {
  briefly "Maintenance request"
  described as {
    |Property maintenance request.
  }
}
type MaintenanceCategory is any of {
  Plumbing,
  Electrical,
  HVAC,
  Appliance,
  Structural,
  Pest,
  Landscaping,
  Other
} with {
  briefly "Maintenance category"
  described as {
    |Type of maintenance.
  }
}
type MaintenancePriority is any of {
  Emergency,
  High,
  Normal,
  Low
} with {
  briefly "Maintenance priority"
  described as {
    |Priority level.
  }
}
type MaintenanceStatus is any of {
  Submitted,
  Assigned,
  InProgress,
  Completed,
  Cancelled
} with {
  briefly "Maintenance status"
  described as {
    |Request status.
  }
}
type RentPayment is {
  paymentId: UUID with {
    briefly "Payment ID"
    described as {
      |Payment identifier.
    }
  }
  leaseId: LeaseId with {
    briefly "Lease"
    described as {
      |Lease ID.
    }
  }
  paymentAmount: Money with {
    briefly "Amount"
    described as {
      |Payment amount.
    }
  }
  periodStart: Date with {
    briefly "Period start"
    described as {
      |Rental period start.
    }
  }
  periodEnd: Date with {
    briefly "Period end"
    described as {
      |Rental period end.
    }
  }
  paidAt: TimeStamp with {
    briefly "Paid"
    described as {
      |Payment time.
    }
  }
  paymentMethod: String(1,50) with {
    briefly "Method"
    described as {
      |Payment method.
    }
  }
} with {
  briefly "Rent payment"
  described as {
    |Tenant rent payment.
  }
}
