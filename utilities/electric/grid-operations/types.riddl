// Grid Operations - Shared Types
type GridSectionId is Id(GridContext.GridSection)  with {
  briefly "Grid section identifier"
  described as {
    |Unique identifier for a grid section.
  }
}
type SubstationId is UUID with {
  briefly "Substation identifier"
  described as {
    |Reference to a substation.
  }
}
type FeederId is UUID with {
  briefly "Feeder identifier"
  described as {
    |Reference to a distribution feeder.
  }
}
type OutageId is UUID with {
  briefly "Outage identifier"
  described as {
    |Reference to an outage event.
  }
}
type GeneratorId is UUID with {
  briefly "Generator identifier"
  described as {
    |Reference to a generation unit.
  }
}
type GridStatus is any of {
  Normal,
  Alert,
  Emergency,
  Restoration,
  Maintenance
} with {
  briefly "Grid status"
  described as {
    |Current grid operating status.
  }
}
type OutageType is any of {
  Planned,
  Unplanned,
  Momentary,
  Sustained,
  MajorEvent
} with {
  briefly "Outage type"
  described as {
    |Type of outage event.
  }
}
type OutageStatus is any of {
  Reported,
  Confirmed,
  CrewDispatchedStatus,
  UnderRepair,
  Restored,
  Closed
} with {
  briefly "Outage status"
  described as {
    |Current outage status.
  }
}
type LoadInfo is {
  timestamp: TimeStamp with {
    briefly "Timestamp"
    described as {
      |Reading timestamp.
    }
  }
  loadMW: Decimal(10,2) with {
    briefly "Load MW"
    described as {
      |Load in megawatts.
    }
  }
  loadMVAR: Decimal(10,2) with {
    briefly "Load MVAR"
    described as {
      |Reactive load in MVAR.
    }
  }
  voltage: Decimal(6,2) with {
    briefly "Voltage"
    described as {
      |Voltage in kV.
    }
  }
  frequency: Decimal(5,3) with {
    briefly "Frequency"
    described as {
      |Frequency in Hz.
    }
  }
} with {
  briefly "Load information"
  described as {
    |Grid load and voltage readings.
  }
}
type GenerationUnit is {
  generatorId: GeneratorId with {
    briefly "Generator"
    described as {
      |Generator identifier.
    }
  }
  name: String(1,100) with {
    briefly "Name"
    described as {
      |Unit name.
    }
  }
  fuelType: String(1,50) with {
    briefly "Fuel"
    described as {
      |Fuel type.
    }
  }
  capacityMW: Decimal(10,2) with {
    briefly "Capacity"
    described as {
      |Capacity in MW.
    }
  }
  currentOutputMW: Decimal(10,2) with {
    briefly "Output"
    described as {
      |Current output MW.
    }
  }
  unitStatus: String(1,50) with {
    briefly "Status"
    described as {
      |Unit status.
    }
  }
} with {
  briefly "Generation unit"
  described as {
    |Power generation unit information.
  }
}
type OutageInfo is {
  outageId: OutageId with {
    briefly "Outage ID"
    described as {
      |Outage identifier.
    }
  }
  outageType: OutageType with {
    briefly "Type"
    described as {
      |Outage type.
    }
  }
  reportedAt: TimeStamp with {
    briefly "Reported"
    described as {
      |Time reported.
    }
  }
  affectedCustomers: Natural with {
    briefly "Customers"
    described as {
      |Affected customer count.
    }
  }
  cause: String(1,500)? with {
    briefly "Cause"
    described as {
      |Outage cause.
    }
  }
  estimatedRestoration: TimeStamp? with {
    briefly "ETR"
    described as {
      |Estimated restoration time.
    }
  }
} with {
  briefly "Outage information"
  described as {
    |Outage event details.
  }
}
type CrewAssignment is {
  crewId: String(1,50) with {
    briefly "Crew"
    described as {
      |Crew identifier.
    }
  }
  assignedAt: TimeStamp with {
    briefly "Assigned"
    described as {
      |Assignment time.
    }
  }
  arrivedAt: TimeStamp? with {
    briefly "Arrived"
    described as {
      |Arrival time.
    }
  }
  crewStatus: String(1,50) with {
    briefly "Status"
    described as {
      |Crew status.
    }
  }
} with {
  briefly "Crew assignment"
  described as {
    |Repair crew assignment.
  }
}
type SwitchingOrder is {
  orderId: UUID with {
    briefly "Order ID"
    described as {
      |Switching order identifier.
    }
  }
  description: String(1,500) with {
    briefly "Description"
    described as {
      |Switching description.
    }
  }
  steps: String(1,200)+ with {
    briefly "Steps"
    described as {
      |Switching steps.
    }
  }
  authorizedBy: String(1,100) with {
    briefly "Authorized"
    described as {
      |Authorizing person.
    }
  }
  orderExecutedAt: TimeStamp? with {
    briefly "Executed"
    described as {
      |Execution time.
    }
  }
} with {
  briefly "Switching order"
  described as {
    |Grid switching order.
  }
}
