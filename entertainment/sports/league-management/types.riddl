// League Management - Shared Types
type SeasonId is Id(LeagueContext.Season)  with {
  briefly "Season identifier"
  described as {
    |Unique identifier for a league season.
  }
}
type TeamId is UUID with {
  briefly "Team identifier"
  described as {
    |Reference to a registered team.
  }
}
type MatchId is UUID with {
  briefly "Match identifier"
  described as {
    |Reference to a scheduled match.
  }
}
type RefereeId is UUID with {
  briefly "Referee identifier"
  described as {
    |Reference to an assigned referee.
  }
}
type VenueId is UUID with {
  briefly "Venue identifier"
  described as {
    |Reference to a match venue.
  }
}
type BracketId is UUID with {
  briefly "Bracket identifier"
  described as {
    |Reference to a playoff bracket.
  }
}
type SeasonStatus is any of {
  Registration,
  Scheduling,
  InProgress,
  PlayoffsActive,
  Completed,
  Cancelled
} with {
  briefly "Season status"
  described as {
    |Current status of a league season.
  }
}
type MatchStatus is any of {
  Scheduled,
  InProgress,
  Completed,
  Postponed,
  Cancelled,
  Forfeited
} with {
  briefly "Match status"
  described as {
    |Current status of a match.
  }
}
type TeamDivision is any of {
  DivisionEast,
  DivisionWest,
  DivisionNorth,
  DivisionSouth,
  DivisionOpen
} with {
  briefly "Team division"
  described as {
    |Division assignment for a team.
  }
}
type RuleViolationType is any of {
  Misconduct,
  RosterViolation,
  EquipmentViolation,
  UnsportsmanlikeConduct,
  EligibilityViolation
} with {
  briefly "Rule violation type"
  described as {
    |Category of rule infraction.
  }
}
type PenaltyType is any of {
  Warning,
  Fine,
  Suspension,
  Disqualification,
  PointsDeduction,
  Expulsion
} with {
  briefly "Penalty type"
  described as {
    |Type of penalty imposed.
  }
}
type BracketFormat is any of {
  SingleElimination,
  DoubleElimination,
  BestOfThree,
  BestOfFive,
  BestOfSeven
} with {
  briefly "Bracket format"
  described as {
    |Playoff bracket format.
  }
}
type TeamInfo is {
  teamId: TeamId with {
    briefly "Team ID"
    described as {
      |Team identifier.
    }
  }
  teamName: String(3,100) with {
    briefly "Name"
    described as {
      |Official team name.
    }
  }
  division: TeamDivision with {
    briefly "Division"
    described as {
      |Division assignment.
    }
  }
  homeVenue: VenueId with {
    briefly "Home venue"
    described as {
      |Home venue identifier.
    }
  }
  managerName: String(3,100) with {
    briefly "Manager"
    described as {
      |Team manager name.
    }
  }
  rosterSize: Natural with {
    briefly "Roster size"
    described as {
      |Number of players on roster.
    }
  }
  registeredAt: TimeStamp with {
    briefly "Registered"
    described as {
      |Registration time.
    }
  }
} with {
  briefly "Team information"
  described as {
    |Registered team details.
  }
}
type MatchInfo is {
  matchId: MatchId with {
    briefly "Match ID"
    described as {
      |Match identifier.
    }
  }
  homeTeamId: TeamId with {
    briefly "Home team"
    described as {
      |Home team identifier.
    }
  }
  awayTeamId: TeamId with {
    briefly "Away team"
    described as {
      |Away team identifier.
    }
  }
  venueId: VenueId with {
    briefly "Venue"
    described as {
      |Match venue identifier.
    }
  }
  scheduledDate: Date with {
    briefly "Date"
    described as {
      |Scheduled match date.
    }
  }
  scheduledTime: Time with {
    briefly "Time"
    described as {
      |Scheduled match time.
    }
  }
  status: MatchStatus with {
    briefly "Status"
    described as {
      |Match status.
    }
  }
} with {
  briefly "Match information"
  described as {
    |Scheduled match details.
  }
}
type MatchResult is {
  matchId: MatchId with {
    briefly "Match ID"
    described as {
      |Match identifier.
    }
  }
  homeScore: Natural with {
    briefly "Home score"
    described as {
      |Home team score.
    }
  }
  awayScore: Natural with {
    briefly "Away score"
    described as {
      |Away team score.
    }
  }
  completedAt: TimeStamp with {
    briefly "Completed"
    described as {
      |Match completion time.
    }
  }
  notes: String(1,500)? with {
    briefly "Notes"
    described as {
      |Match notes.
    }
  }
} with {
  briefly "Match result"
  described as {
    |Result of a completed match.
  }
}
type TeamStanding is {
  teamId: TeamId with {
    briefly "Team"
    described as {
      |Team identifier.
    }
  }
  wins: Natural with {
    briefly "Wins"
    described as {
      |Number of wins.
    }
  }
  losses: Natural with {
    briefly "Losses"
    described as {
      |Number of losses.
    }
  }
  draws: Natural with {
    briefly "Draws"
    described as {
      |Number of draws.
    }
  }
  pointsFor: Natural with {
    briefly "Points for"
    described as {
      |Total points scored.
    }
  }
  pointsAgainst: Natural with {
    briefly "Points against"
    described as {
      |Total points conceded.
    }
  }
  ranking: Natural with {
    briefly "Rank"
    described as {
      |Current ranking position.
    }
  }
} with {
  briefly "Team standing"
  described as {
    |Team record in league standings.
  }
}
type RefereeAssignment is {
  refereeId: RefereeId with {
    briefly "Referee"
    described as {
      |Referee identifier.
    }
  }
  refereeName: String(3,100) with {
    briefly "Name"
    described as {
      |Referee name.
    }
  }
  matchId: MatchId with {
    briefly "Match"
    described as {
      |Assigned match identifier.
    }
  }
  role: String(3,50) with {
    briefly "Role"
    described as {
      |Referee role in the match.
    }
  }
  assignedAt: TimeStamp with {
    briefly "Assigned"
    described as {
      |Assignment time.
    }
  }
} with {
  briefly "Referee assignment"
  described as {
    |Referee assigned to a match.
  }
}
type RuleViolation is {
  violationType: RuleViolationType with {
    briefly "Type"
    described as {
      |Violation category.
    }
  }
  teamId: TeamId with {
    briefly "Team"
    described as {
      |Offending team.
    }
  }
  matchId: MatchId with {
    briefly "Match"
    described as {
      |Match where violation occurred.
    }
  }
  description: String(3,500) with {
    briefly "Description"
    described as {
      |Violation description.
    }
  }
  penalty: PenaltyType with {
    briefly "Penalty"
    described as {
      |Imposed penalty.
    }
  }
  reportedAt: TimeStamp with {
    briefly "Reported"
    described as {
      |Report time.
    }
  }
} with {
  briefly "Rule violation"
  described as {
    |Recorded rule infraction.
  }
}
type PlayoffBracket is {
  bracketId: BracketId with {
    briefly "Bracket ID"
    described as {
      |Bracket identifier.
    }
  }
  format: BracketFormat with {
    briefly "Format"
    described as {
      |Bracket format.
    }
  }
  qualifiedTeams: TeamId+ with {
    briefly "Teams"
    described as {
      |Qualified team identifiers.
    }
  }
  currentRound: Natural with {
    briefly "Round"
    described as {
      |Current playoff round.
    }
  }
  matches: MatchInfo+ with {
    briefly "Matches"
    described as {
      |Playoff match fixtures.
    }
  }
} with {
  briefly "Playoff bracket"
  described as {
    |Playoff bracket structure.
  }
}
