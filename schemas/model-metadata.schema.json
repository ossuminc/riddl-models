{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/ossuminc/riddl-models/schemas/model-metadata.schema.json",
  "title": "RIDDL Model Metadata",
  "description": "Schema for .metadata.json files accompanying RIDDL models",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Human-readable name of the model",
      "minLength": 1,
      "maxLength": 100
    },
    "description": {
      "type": "string",
      "description": "Brief description of what the model represents",
      "maxLength": 500
    },
    "author": {
      "type": "string",
      "description": "Author or organization that created the model"
    },
    "version": {
      "type": "string",
      "description": "Semantic version of the model",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.]+)?$"
    },
    "tags": {
      "type": "array",
      "description": "Keywords for categorization and discovery",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "uniqueItems": true,
      "maxItems": 20
    },
    "difficulty": {
      "type": "string",
      "description": "Learning difficulty level",
      "enum": ["beginner", "intermediate", "advanced"]
    },
    "complexity": {
      "type": "string",
      "description": "Implementation complexity tier",
      "enum": ["starter", "standard", "enterprise"]
    },
    "riddl_version": {
      "type": "string",
      "description": "Minimum RIDDL compiler version required",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "simulation_ready": {
      "type": "boolean",
      "description": "Whether the model can run in riddlsim"
    },
    "related_patterns": {
      "type": "array",
      "description": "Paths to patterns used in this model",
      "items": {
        "type": "string",
        "pattern": "^[a-z-]+/[a-z-]+$"
      }
    },
    "related_models": {
      "type": "array",
      "description": "Paths to related models in this repository",
      "items": {
        "type": "string"
      }
    },
    "external_references": {
      "type": "array",
      "description": "Links to external documentation or resources",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["title", "url"]
      }
    },
    "industry_codes": {
      "type": "object",
      "description": "Industry classification codes",
      "properties": {
        "naics": {
          "type": "string",
          "description": "NAICS industry code",
          "pattern": "^\\d{2,6}$"
        },
        "sic": {
          "type": "string",
          "description": "SIC industry code",
          "pattern": "^\\d{4}$"
        }
      }
    },
    "license": {
      "type": "string",
      "description": "License for the model",
      "default": "Apache-2.0"
    },
    "created_at": {
      "type": "string",
      "description": "ISO 8601 date when model was created",
      "format": "date"
    },
    "updated_at": {
      "type": "string",
      "description": "ISO 8601 date when model was last updated",
      "format": "date"
    }
  },
  "required": ["name", "description"],
  "additionalProperties": false
}