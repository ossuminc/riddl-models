// Fleet Management - Shared Types
type VehicleId is Id(VehicleContext.Vehicle)  with {
  briefly "Vehicle identifier"
  described as {
    |Unique identifier for a vehicle.
  }
}
type DriverId is UUID with {
  briefly "Driver identifier"
  described as {
    |Reference to a driver.
  }
}
type MaintenanceId is UUID with {
  briefly "Maintenance identifier"
  described as {
    |Reference to maintenance record.
  }
}
type TripId is UUID with {
  briefly "Trip identifier"
  described as {
    |Reference to a trip.
  }
}
type VehicleStatus is any of {
  Available,
  InUse,
  InMaintenance,
  OutOfService,
  Reserved
} with {
  briefly "Vehicle status"
  described as {
    |Current vehicle status.
  }
}
type VehicleType is any of {
  Sedan,
  SUV,
  Van,
  Truck,
  Bus,
  Motorcycle,
  Trailer
} with {
  briefly "Vehicle type"
  described as {
    |Type of vehicle.
  }
}
type FuelType is any of {
  Gasoline,
  Diesel,
  Electric,
  Hybrid,
  CNG,
  LPG
} with {
  briefly "Fuel type"
  described as {
    |Vehicle fuel type.
  }
}
type MaintenanceType is any of {
  Scheduled,
  Preventive,
  Corrective,
  Emergency,
  Inspection
} with {
  briefly "Maintenance type"
  described as {
    |Type of maintenance.
  }
}
type MaintenanceStatus is any of {
  Scheduled,
  InProgress,
  Completed,
  Cancelled
} with {
  briefly "Maintenance status"
  described as {
    |Maintenance status.
  }
}
type VehicleInfo is {
  vehicleId: VehicleId with {
    briefly "Vehicle"
    described as {
      |Vehicle identifier.
    }
  }
  make: String(1,50) with {
    briefly "Make"
    described as {
      |Vehicle make.
    }
  }
  model: String(1,50) with {
    briefly "Model"
    described as {
      |Vehicle model.
    }
  }
  year: Natural with {
    briefly "Year"
    described as {
      |Model year.
    }
  }
  vehicleType: VehicleType with {
    briefly "Type"
    described as {
      |Vehicle type.
    }
  }
  licensePlate: String(1,20) with {
    briefly "Plate"
    described as {
      |License plate.
    }
  }
  vin: String(17,17) with {
    briefly "VIN"
    described as {
      |Vehicle identification number.
    }
  }
  fuelType: FuelType with {
    briefly "Fuel"
    described as {
      |Fuel type.
    }
  }
  fuelCapacity: Decimal(6,2) with {
    briefly "Capacity"
    described as {
      |Fuel capacity.
    }
  }
  color: String(1,30) with {
    briefly "Color"
    described as {
      |Vehicle color.
    }
  }
} with {
  briefly "Vehicle info"
  described as {
    |Vehicle details.
  }
}
type DriverInfo is {
  driverId: DriverId with {
    briefly "Driver"
    described as {
      |Driver identifier.
    }
  }
  name: String(1,200) with {
    briefly "Name"
    described as {
      |Driver name.
    }
  }
  licenseNumber: String(1,50) with {
    briefly "License"
    described as {
      |Driver's license.
    }
  }
  licenseExpiry: Date with {
    briefly "Expiry"
    described as {
      |License expiration.
    }
  }
  phone: String(10,20) with {
    briefly "Phone"
    described as {
      |Contact phone.
    }
  }
  certifications: String(1,100)* with {
    briefly "Certifications"
    described as {
      |Driver certifications.
    }
  }
} with {
  briefly "Driver info"
  described as {
    |Driver details.
  }
}
type GpsLocation is {
  latitude: Decimal(10,7) with {
    briefly "Latitude"
    described as {
      |GPS latitude.
    }
  }
  longitude: Decimal(10,7) with {
    briefly "Longitude"
    described as {
      |GPS longitude.
    }
  }
  altitude: Decimal(8,2)? with {
    briefly "Altitude"
    described as {
      |Altitude in meters.
    }
  }
  heading: Decimal(5,2)? with {
    briefly "Heading"
    described as {
      |Compass heading.
    }
  }
  speed: Decimal(6,2)? with {
    briefly "Speed"
    described as {
      |Speed in km/h.
    }
  }
  timestamp: TimeStamp with {
    briefly "Timestamp"
    described as {
      |Location timestamp.
    }
  }
} with {
  briefly "GPS location"
  described as {
    |GPS position data.
  }
}
type Odometer is {
  reading: Natural with {
    briefly "Reading"
    described as {
      |Odometer reading.
    }
  }
  unit: String(2,5) with {
    briefly "Unit"
    described as {
      |Unit (km or mi).
    }
  }
  recordedAt: TimeStamp with {
    briefly "Recorded"
    described as {
      |Recording time.
    }
  }
} with {
  briefly "Odometer"
  described as {
    |Odometer reading.
  }
}
type FuelLevel is {
  fuelAmount: Decimal(6,2) with {
    briefly "Amount"
    described as {
      |Fuel amount.
    }
  }
  percentage: Decimal(5,2) with {
    briefly "Percentage"
    described as {
      |Tank percentage.
    }
  }
  recordedAt: TimeStamp with {
    briefly "Recorded"
    described as {
      |Recording time.
    }
  }
} with {
  briefly "Fuel level"
  described as {
    |Fuel level data.
  }
}
type MaintenanceRecord is {
  maintenanceId: MaintenanceId with {
    briefly "Maintenance"
    described as {
      |Maintenance identifier.
    }
  }
  maintenanceType: MaintenanceType with {
    briefly "Type"
    described as {
      |Maintenance type.
    }
  }
  description: String(1,1000) with {
    briefly "Description"
    described as {
      |Work description.
    }
  }
  scheduledDate: Date with {
    briefly "Scheduled"
    described as {
      |Scheduled date.
    }
  }
  completedDate: Date? with {
    briefly "Completed"
    described as {
      |Completion date.
    }
  }
  updatedCost: Decimal(10,2)? with {
    briefly "Cost"
    described as {
      |Maintenance cost.
    }
  }
  updatedTechnician: String(1,200)? with {
    briefly "Technician"
    described as {
      |Performing technician.
    }
  }
  odometerAtService: Natural? with {
    briefly "Odometer"
    described as {
      |Odometer at service.
    }
  }
  maintenanceStatus: MaintenanceStatus with {
    briefly "Status"
    described as {
      |Maintenance status.
    }
  }
} with {
  briefly "Maintenance record"
  described as {
    |Maintenance details.
  }
}
type TripRecord is {
  tripId: TripId with {
    briefly "Trip"
    described as {
      |Trip identifier.
    }
  }
  driver: DriverInfo with {
    briefly "Driver"
    described as {
      |Assigned driver.
    }
  }
  startLocation: GpsLocation with {
    briefly "Start"
    described as {
      |Start location.
    }
  }
  updatedEndLocation: GpsLocation? with {
    briefly "End"
    described as {
      |End location.
    }
  }
  startOdometer: Natural with {
    briefly "Start odometer"
    described as {
      |Starting odometer.
    }
  }
  updatedEndOdometer: Natural? with {
    briefly "End odometer"
    described as {
      |Ending odometer.
    }
  }
  startTime: TimeStamp with {
    briefly "Start time"
    described as {
      |Trip start time.
    }
  }
  endTime: TimeStamp? with {
    briefly "End time"
    described as {
      |Trip end time.
    }
  }
  purpose: String(1,500)? with {
    briefly "Purpose"
    described as {
      |Trip purpose.
    }
  }
} with {
  briefly "Trip record"
  described as {
    |Trip details.
  }
}
type Alert is {
  alertId: UUID with {
    briefly "Alert"
    described as {
      |Alert identifier.
    }
  }
  alertType: String(1,50) with {
    briefly "Type"
    described as {
      |Alert type.
    }
  }
  severity: String(1,20) with {
    briefly "Severity"
    described as {
      |Alert severity.
    }
  }
  message: String(1,500) with {
    briefly "Message"
    described as {
      |Alert message.
    }
  }
  createdAt: TimeStamp with {
    briefly "Created"
    described as {
      |Alert time.
    }
  }
  acknowledged: Boolean with {
    briefly "Acknowledged"
    described as {
      |Whether acknowledged.
    }
  }
} with {
  briefly "Alert"
  described as {
    |Vehicle alert.
  }
}
