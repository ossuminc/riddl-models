// Work Order Management - Shared Types
type WorkOrderId is Id(WorkOrderContext.WorkOrder)  with {
  briefly "Work order identifier"
  described as {
    |Unique identifier for a work order.
  }
}
type ProductId is UUID with {
  briefly "Product identifier"
  described as {
    |Reference to a product.
  }
}
type OperationId is UUID with {
  briefly "Operation identifier"
  described as {
    |Reference to an operation.
  }
}
type WorkCenterId is UUID with {
  briefly "Work center identifier"
  described as {
    |Reference to a work center.
  }
}
type MaterialId is UUID with {
  briefly "Material identifier"
  described as {
    |Reference to a material.
  }
}
type RoutingId is UUID with {
  briefly "Routing identifier"
  described as {
    |Reference to a routing.
  }
}
type WorkOrderStatus is any of {
  Created,
  Released,
  InProgress,
  OnHold,
  Completed,
  Cancelled,
  Closed
} with {
  briefly "Work order status"
  described as {
    |Current work order status.
  }
}
type OperationStatus is any of {
  Pending,
  Ready,
  InProgress,
  Completed,
  Skipped
} with {
  briefly "Operation status"
  described as {
    |Current operation status.
  }
}
type OrderPriority is any of {
  Low,
  Normal,
  High,
  Urgent,
  Emergency
} with {
  briefly "Order priority"
  described as {
    |Work order priority.
  }
}
type ProductInfo is {
  productId: ProductId with {
    briefly "Product"
    described as {
      |Product identifier.
    }
  }
  partNumber: String(1,50) with {
    briefly "Part number"
    described as {
      |Part number.
    }
  }
  name: String(1,200) with {
    briefly "Name"
    described as {
      |Product name.
    }
  }
  revision: String(1,20) with {
    briefly "Revision"
    described as {
      |Product revision.
    }
  }
  unitOfMeasure: String(1,20) with {
    briefly "UOM"
    described as {
      |Unit of measure.
    }
  }
} with {
  briefly "Product info"
  described as {
    |Product information.
  }
}
type MaterialRequirement is {
  materialId: MaterialId with {
    briefly "Material"
    described as {
      |Material identifier.
    }
  }
  partNumber: String(1,50) with {
    briefly "Part number"
    described as {
      |Material part number.
    }
  }
  name: String(1,200) with {
    briefly "Name"
    described as {
      |Material name.
    }
  }
  requiredQuantity: Decimal(15,4) with {
    briefly "Required"
    described as {
      |Required quantity.
    }
  }
  unitOfMeasure: String(1,20) with {
    briefly "UOM"
    described as {
      |Unit of measure.
    }
  }
  issuedQuantity: Decimal(15,4) with {
    briefly "Issued"
    described as {
      |Issued quantity.
    }
  }
} with {
  briefly "Material requirement"
  described as {
    |Bill of materials line item.
  }
}
type OperationInfo is {
  operationId: OperationId with {
    briefly "Operation"
    described as {
      |Operation identifier.
    }
  }
  sequenceNumber: Natural with {
    briefly "Sequence"
    described as {
      |Operation sequence.
    }
  }
  name: String(1,200) with {
    briefly "Name"
    described as {
      |Operation name.
    }
  }
  workCenterId: WorkCenterId with {
    briefly "Work center"
    described as {
      |Work center ID.
    }
  }
  workCenterName: String(1,100) with {
    briefly "Work center name"
    described as {
      |Work center name.
    }
  }
  setupTime: Natural with {
    briefly "Setup time"
    described as {
      |Setup time in minutes.
    }
  }
  runTime: Natural with {
    briefly "Run time"
    described as {
      |Run time per unit in minutes.
    }
  }
  operationStatus: OperationStatus with {
    briefly "Status"
    described as {
      |Operation status.
    }
  }
  instructions: String(1,5000)? with {
    briefly "Instructions"
    described as {
      |Work instructions.
    }
  }
} with {
  briefly "Operation info"
  described as {
    |Routing operation details.
  }
}
type ScheduleInfo is {
  plannedStart: TimeStamp with {
    briefly "Planned start"
    described as {
      |Planned start time.
    }
  }
  plannedEnd: TimeStamp with {
    briefly "Planned end"
    described as {
      |Planned end time.
    }
  }
  actualStart: TimeStamp? with {
    briefly "Actual start"
    described as {
      |Actual start time.
    }
  }
  actualEnd: TimeStamp? with {
    briefly "Actual end"
    described as {
      |Actual end time.
    }
  }
} with {
  briefly "Schedule info"
  described as {
    |Work order schedule.
  }
}
