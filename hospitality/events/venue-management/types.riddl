type SpaceInfo is {
  spaceId: SpaceId with {
    briefly "Space"
    described as {
      |Space identifier.
    }
  }
  name: String(1,100) with {
    briefly "Name"
    described as {
      |Space name.
    }
  }
  spaceType: SpaceType with {
    briefly "Type"
    described as {
      |Space type.
    }
  }
  capacity: Natural with {
    briefly "Capacity"
    described as {
      |Maximum capacity.
    }
  }
  squareFeet: Natural with {
    briefly "Size"
    described as {
      |Square footage.
    }
  }
  floor: String(1,20) with {
    briefly "Floor"
    described as {
      |Floor location.
    }
  }
  baseRate: Decimal(10,2) with {
    briefly "Rate"
    described as {
      |Base hourly rate.
    }
  }
  amenities: String(1,100)* with {
    briefly "Amenities"
    described as {
      |Space amenities.
    }
  }
