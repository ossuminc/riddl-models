// Venue Management - Shared Types
type BookingId is Id(VenueContext.Booking)  with {
  briefly "Booking identifier"
  described as {
    |Unique identifier for a venue booking.
  }
}
type VenueId is UUID with {
  briefly "Venue identifier"
  described as {
    |Reference to a venue.
  }
}
type SpaceId is UUID with {
  briefly "Space identifier"
  described as {
    |Reference to a venue space.
  }
}
type CustomerId is UUID with {
  briefly "Customer identifier"
  described as {
    |Reference to customer.
  }
}
type ResourceId is UUID with {
  briefly "Resource identifier"
  described as {
    |Reference to a venue resource.
  }
}
type BookingStatus is any of {
  Pending,
  Confirmed,
  InProgress,
  Completed,
  Cancelled
} with {
  briefly "Booking status"
  described as {
    |Current booking status.
  }
}
type SpaceType is any of {
  Ballroom,
  ConferenceRoom,
  MeetingRoom,
  Theater,
  Auditorium,
  ExhibitionHall,
  Boardroom,
  BreakoutRoom,
  Outdoor
} with {
  briefly "Space type"
  described as {
    |Type of venue space.
  }
}
type SetupStyle is any of {
  Theater,
  Classroom,
  Banquet,
  Reception,
  UShape,
  Boardroom,
  Hollow,
  Cabaret
} with {
  briefly "Setup style"
  described as {
    |Room setup configuration.
  }
}
type EventType is any of {
  Conference,
  Meeting,
  Wedding,
  Reception,
  Gala,
  TradeShow,
  Workshop,
  Seminar,
  Concert,
  Other
} with {
  briefly "Event type"
  described as {
    |Type of event.
  }
}
type PaymentStatus is any of {
  Unpaid,
  Deposit,
  PartiallyPaid,
  Paid,
  Refunded
} with {
  briefly "Payment status"
  described as {
    |Payment status.
  }
}
