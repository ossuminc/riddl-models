    briefly "City"
    described as {
      |City.
    }
  }
  phone: String(10,20) with {
    briefly "Phone"
    described as {
      |Contact phone.
    }
  }
  email: String(5,254) with {
    briefly "Email"
    described as {
      |Contact email.
    }
  }
