// Course Management - Shared Types
type CourseId is Id(CourseContext.Course)  with {
  briefly "Course identifier"
  described as {
    |Unique identifier for a course.
  }
}
type SectionId is UUID with {
  briefly "Section identifier"
  described as {
    |Reference to a course section.
  }
}
type StudentId is UUID with {
  briefly "Student identifier"
  described as {
    |Reference to a student.
  }
}
type InstructorId is UUID with {
  briefly "Instructor identifier"
  described as {
    |Reference to an instructor.
  }
}
type TermId is UUID with {
  briefly "Term identifier"
  described as {
    |Reference to an academic term.
  }
}
type CourseStatus is any of {
  Draft,
  Active,
  Inactive,
  Archived
} with {
  briefly "Course status"
  described as {
    |Current course catalog status.
  }
}
type SectionStatus is any of {
  Scheduled,
  Open,
  Closed,
  Cancelled,
  Completed
} with {
  briefly "Section status"
  described as {
    |Current section status.
  }
}
type EnrollmentStatus is any of {
  Enrolled,
  Waitlisted,
  Dropped,
  Withdrawn,
  Completed
} with {
  briefly "Enrollment status"
  described as {
    |Student enrollment status.
  }
}
type CourseInfo is {
  courseCode: String(1,20) with {
    briefly "Code"
    described as {
      |Course code (e.g., CS101).
    }
  }
  title: String(1,200) with {
    briefly "Title"
    described as {
      |Course title.
    }
  }
  description: String(1,5000) with {
    briefly "Description"
    described as {
      |Course description.
    }
  }
  credits: Natural with {
    briefly "Credits"
    described as {
      |Credit hours.
    }
  }
  department: String(1,100) with {
    briefly "Department"
    described as {
      |Academic department.
    }
  }
  level: CourseLevel with {
    briefly "Level"
    described as {
      |Course level.
    }
  }
} with {
  briefly "Course information"
  described as {
    |Basic course details.
  }
}
type CourseLevel is any of {
  Undergraduate,
  Graduate,
  Doctoral,
  Professional,
  Continuing
} with {
  briefly "Course level"
  described as {
    |Academic level of course.
  }
}
type Prerequisite is {
  courseId: CourseId with {
    briefly "Course"
    described as {
      |Required course.
    }
  }
  minimumGrade: String(1,5)? with {
    briefly "Grade"
    described as {
      |Minimum grade required.
    }
  }
  concurrent: Boolean with {
    briefly "Concurrent"
    described as {
      |Can be taken concurrently.
    }
  }
} with {
  briefly "Prerequisite"
  described as {
    |Course prerequisite requirement.
  }
}
type Section is {
  sectionId: SectionId with {
    briefly "Section ID"
    described as {
      |Section identifier.
    }
  }
  sectionNumber: String(1,10) with {
    briefly "Number"
    described as {
      |Section number.
    }
  }
  termId: TermId with {
    briefly "Term"
    described as {
      |Academic term.
    }
  }
  instructorId: InstructorId with {
    briefly "Instructor"
    described as {
      |Assigned instructor.
    }
  }
  schedule: ClassSchedule with {
    briefly "Schedule"
    described as {
      |Meeting schedule.
    }
  }
  capacity: Natural with {
    briefly "Capacity"
    described as {
      |Maximum enrollment.
    }
  }
  enrolled: Natural with {
    briefly "Enrolled"
    described as {
      |Current enrollment.
    }
  }
  waitlistCapacity: Natural with {
    briefly "Waitlist"
    described as {
      |Waitlist capacity.
    }
  }
  status: SectionStatus with {
    briefly "Status"
    described as {
      |Section status.
    }
  }
} with {
  briefly "Course section"
  described as {
    |Scheduled instance of a course.
  }
}
type ClassSchedule is {
  days: DayOfWeek+ with {
    briefly "Days"
    described as {
      |Meeting days.
    }
  }
  startTime: Time with {
    briefly "Start"
    described as {
      |Start time.
    }
  }
  endTime: Time with {
    briefly "End"
    described as {
      |End time.
    }
  }
  location: String(1,100) with {
    briefly "Location"
    described as {
      |Classroom location.
    }
  }
  deliveryMode: DeliveryMode with {
    briefly "Mode"
    described as {
      |Delivery mode.
    }
  }
} with {
  briefly "Class schedule"
  described as {
    |Meeting time and location.
  }
}
type DayOfWeek is any of {
  Monday,
  Tuesday,
  Wednesday,
  Thursday,
  Friday,
  Saturday,
  Sunday
} with {
  briefly "Day of week"
  described as {
    |Day of the week.
  }
}
type DeliveryMode is any of {
  InPerson,
  Online,
  Hybrid,
  Synchronous,
  Asynchronous
} with {
  briefly "Delivery mode"
  described as {
    |Course delivery method.
  }
}
type Enrollment is {
  studentId: StudentId with {
    briefly "Student"
    described as {
      |Enrolled student.
    }
  }
  sectionId: SectionId with {
    briefly "Section"
    described as {
      |Enrolled section.
    }
  }
  enrollmentStatus: EnrollmentStatus with {
    briefly "Status"
    described as {
      |Enrollment status.
    }
  }
  enrolledAt: TimeStamp with {
    briefly "Enrolled"
    described as {
      |Enrollment time.
    }
  }
  updatedGrade: String(1,5)? with {
    briefly "Grade"
    described as {
      |Final grade.
    }
  }
} with {
  briefly "Enrollment"
  described as {
    |Student course enrollment.
  }
}
type AcademicTerm is {
  termId: TermId with {
    briefly "Term ID"
    described as {
      |Term identifier.
    }
  }
  name: String(1,50) with {
    briefly "Name"
    described as {
      |Term name (e.g., Fall 2026).
    }
  }
  startDate: Date with {
    briefly "Start"
    described as {
      |Term start date.
    }
  }
  endDate: Date with {
    briefly "End"
    described as {
      |Term end date.
    }
  }
  registrationStart: Date with {
    briefly "Reg start"
    described as {
      |Registration opens.
    }
  }
  registrationEnd: Date with {
    briefly "Reg end"
    described as {
      |Registration closes.
    }
  }
} with {
  briefly "Academic term"
  described as {
    |Semester or quarter.
  }
}
