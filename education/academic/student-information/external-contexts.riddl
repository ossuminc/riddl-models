// Student Information - External Contexts
// Financial Aid Service
context FinancialAidService is {
  event FinancialAidAwarded is  {
    studentId: StudentId with {
      briefly "Student"
      described as {
        |Student ID.
      }
    }
    awardId: UUID with {
      briefly "Award"
      described as {
        |Award ID.
      }
    }
    amount: Decimal(10,2) with {
      briefly "Amount"
      described as {
        |Award amount.
      }
    }
    awardType: String(1,50) with {
      briefly "Type"
      described as {
        |Award type.
      }
    }
    awardedAt: TimeStamp with {
      briefly "Awarded"
      described as {
        |Award time.
      }
    }
  } with {
    briefly "Aid was awarded"
    described as {
      |Emitted when financial aid is awarded.
    }
  }
  event AidStatusChanged is  {
    studentId: StudentId with {
      briefly "Student"
      described as {
        |Student ID.
      }
    }
    awardId: UUID with {
      briefly "Award"
      described as {
        |Award ID.
      }
    }
    aidStatus: String(1,50) with {
      briefly "Status"
      described as {
        |New status.
      }
    }
    changedAt: TimeStamp with {
      briefly "Changed"
      described as {
        |Change time.
      }
    }
  } with {
    briefly "Aid status changed"
    described as {
      |Emitted when aid status changes.
    }
  }
} with {
  option external()
  briefly "External financial aid service"
  described as {
    |External financial aid system.
  }
}
// Admissions Service
context AdmissionsService is {
  event ApplicationReceived is  {
    applicationId: UUID with {
      briefly "Application"
      described as {
        |Application ID.
      }
    }
    applicantName: String(1,200) with {
      briefly "Name"
      described as {
        |Applicant name.
      }
    }
    programId: ProgramId with {
      briefly "Program"
      described as {
        |Applied program.
      }
    }
    receivedAt: TimeStamp with {
      briefly "Received"
      described as {
        |Receipt time.
      }
    }
  } with {
    briefly "Application was received"
    described as {
      |Emitted when application arrives.
    }
  }
  event AdmissionDecisionMade is  {
    applicationId: UUID with {
      briefly "Application"
      described as {
        |Application ID.
      }
    }
    decision: String(1,50) with {
      briefly "Decision"
      described as {
        |Admit/Deny/Waitlist.
      }
    }
    decidedAt: TimeStamp with {
      briefly "Decided"
      described as {
        |Decision time.
      }
    }
  } with {
    briefly "Decision was made"
    described as {
      |Emitted when admission decision is made.
    }
  }
} with {
  option external()
  briefly "External admissions service"
  described as {
    |External admissions system.
  }
}
// Transcript Service
context TranscriptService is {
  command RequestTranscript is  {
    studentId: StudentId with {
      briefly "Student"
      described as {
        |Student ID.
      }
    }
    recipientName: String(1,200) with {
      briefly "Recipient"
      described as {
        |Recipient name.
      }
    }
    recipientAddress: String(1,500) with {
      briefly "Address"
      described as {
        |Delivery address.
      }
    }
    official: Boolean with {
      briefly "Official"
      described as {
        |Is official transcript.
      }
    }
  } with {
    briefly "Request transcript"
    described as {
      |Requests transcript copy.
    }
  }
  event TranscriptGenerated is  {
    transcriptId: TranscriptId with {
      briefly "Transcript"
      described as {
        |Transcript ID.
      }
    }
    studentId: StudentId with {
      briefly "Student"
      described as {
        |Student ID.
      }
    }
    generatedAt: TimeStamp with {
      briefly "Generated"
      described as {
        |Generation time.
      }
    }
  } with {
    briefly "Transcript was generated"
    described as {
      |Emitted when transcript is created.
    }
  }
  event TranscriptDelivered is  {
    transcriptId: TranscriptId with {
      briefly "Transcript"
      described as {
        |Transcript ID.
      }
    }
    deliveredAt: TimeStamp with {
      briefly "Delivered"
      described as {
        |Delivery time.
      }
    }
    deliveryMethod: String(1,50) with {
      briefly "Method"
      described as {
        |Delivery method.
      }
    }
  } with {
    briefly "Transcript was delivered"
    described as {
      |Emitted when transcript is sent.
    }
  }
} with {
  option external()
  briefly "External transcript service"
  described as {
    |External transcript processing system.
  }
}
// Identity Verification Service
context IdentityService is {
  command VerifyIdentity is  {
    studentId: StudentId with {
      briefly "Student"
      described as {
        |Student ID.
      }
    }
    documentType: String(1,50) with {
      briefly "Document"
      described as {
        |Document type.
      }
    }
    documentNumber: String(1,100) with {
      briefly "Number"
      described as {
        |Document number.
      }
    }
  } with {
    briefly "Verify identity"
    described as {
      |Verifies student identity.
    }
  }
  event IdentityVerified is  {
    studentId: StudentId with {
      briefly "Student"
      described as {
        |Student ID.
      }
    }
    verificationId: UUID with {
      briefly "Verification"
      described as {
        |Verification ID.
      }
    }
    verifiedAt: TimeStamp with {
      briefly "Verified"
      described as {
        |Verification time.
      }
    }
  } with {
    briefly "Identity was verified"
    described as {
      |Emitted when identity is confirmed.
    }
  }
} with {
  option external()
  briefly "External identity service"
  described as {
    |External identity verification system.
  }
}
