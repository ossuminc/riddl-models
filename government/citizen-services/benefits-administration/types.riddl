}

type RecertificationInfo is {
  dueDate is Date with {
    briefly "Due"
    described by "Recertification due date."
  }
  recertificationCompletedAt is optional TimeStamp with {
    briefly "Completed"
    described by "Completion time."
  }
  recertificationStatus is String(1, 50) with {
    briefly "Status"
    described by "Recertification status."
  }
