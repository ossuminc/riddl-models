  briefly "Verification document"
  described by "Supporting document."
}

type AppealInfo is {
  appealId is UUID with {
    briefly "Appeal"
    described by "Appeal identifier."
  }
  reason is String(1, 2000) with {
    briefly "Reason"
    described by "Appeal reason."
  }
