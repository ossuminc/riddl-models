// Permit Management - Shared Types
type PermitId is Id(PermitContext.Permit)  with {
  briefly "Permit identifier"
  described as {
    |Unique identifier for a permit.
  }
}
type ApplicationId is UUID with {
  briefly "Application identifier"
  described as {
    |Reference to an application.
  }
}
type InspectionId is UUID with {
  briefly "Inspection identifier"
  described as {
    |Reference to an inspection.
  }
}
type ReviewerId is UUID with {
  briefly "Reviewer identifier"
  described as {
    |Reference to a reviewer.
  }
}
type InspectorId is UUID with {
  briefly "Inspector identifier"
  described as {
    |Reference to an inspector.
  }
}
type ParcelId is String(1,50) with {
  briefly "Parcel identifier"
  described as {
    |Property parcel number.
  }
}
type PermitStatus is any of {
  Draft,
  Submitted,
  InReview,
  Corrections,
  Approved,
  Issued,
  Active,
  Expired,
  Closed,
  Voided,
  Revoked
} with {
  briefly "Permit status"
  described as {
    |Current permit state.
  }
}
type PermitType is any of {
  Building,
  Electrical,
  Plumbing,
  Mechanical,
  Demolition,
  Grading,
  Zoning,
  SignPermit,
  FireAlarm,
  SpecialEvent,
  Encroachment
} with {
  briefly "Permit type"
  described as {
    |Category of permit.
  }
}
type InspectionStatus is any of {
  Scheduled,
  InProgress,
  Passed,
  Failed,
  PartialPass,
  Cancelled,
  NoAccess
} with {
  briefly "Inspection status"
  described as {
    |Inspection result status.
  }
}
type InspectionType is any of {
  Foundation,
  Framing,
  Rough,
  Final,
  Electrical,
  Plumbing,
  Mechanical,
  Fire,
  Zoning,
  PreInspection
} with {
  briefly "Inspection type"
  described as {
    |Category of inspection.
  }
}
type Address is {
  street: String(1,200) with {
    briefly "Street"
    described as {
      |Street address.
    }
  }
  city: String(1,100) with {
    briefly "City"
    described as {
      |City.
    }
  }
  state: String(2,50) with {
    briefly "State"
    described as {
      |State.
    }
  }
  postalCode: String(5,10) with {
    briefly "Postal"
    described as {
      |ZIP code.
    }
  }
} with {
  briefly "Address"
  described as {
    |Physical address.
  }
}
type ApplicantInfo is {
  name: String(1,200) with {
    briefly "Name"
    described as {
      |Applicant name.
    }
  }
  companyName: String(1,200)? with {
    briefly "Company"
    described as {
      |Company name.
    }
  }
  address: Address with {
    briefly "Address"
    described as {
      |Contact address.
    }
  }
  phone: String(10,20) with {
    briefly "Phone"
    described as {
      |Phone number.
    }
  }
  email: String(5,254) with {
    briefly "Email"
    described as {
      |Email address.
    }
  }
  contractorLicenseNumber: String(1,50)? with {
    briefly "License"
    described as {
      |Contractor license.
    }
  }
} with {
  briefly "Applicant info"
  described as {
    |Permit applicant information.
  }
}
type PropertyInfo is {
  parcelId: ParcelId with {
    briefly "Parcel"
    described as {
      |Parcel number.
    }
  }
  address: Address with {
    briefly "Address"
    described as {
      |Property address.
    }
  }
  ownerName: String(1,200) with {
    briefly "Owner"
    described as {
      |Property owner.
    }
  }
  zoningCode: String(1,20) with {
    briefly "Zoning"
    described as {
      |Zoning designation.
    }
  }
  lotSize: Decimal(10,2) with {
    briefly "Lot size"
    described as {
      |Lot size in sq ft.
    }
  }
} with {
  briefly "Property info"
  described as {
    |Property information.
  }
}
type ProjectInfo is {
  description: String(1,2000) with {
    briefly "Description"
    described as {
      |Project description.
    }
  }
  workType: String(1,100) with {
    briefly "Work type"
    described as {
      |Type of work.
    }
  }
  estimatedValue: Decimal(12,2) with {
    briefly "Value"
    described as {
      |Estimated project value.
    }
  }
  squareFootage: Decimal(10,2)? with {
    briefly "Sq ft"
    described as {
      |Square footage affected.
    }
  }
  stories: Natural? with {
    briefly "Stories"
    described as {
      |Number of stories.
    }
  }
  occupancyType: String(1,50)? with {
    briefly "Occupancy"
    described as {
      |Building occupancy type.
    }
  }
  constructionType: String(1,50)? with {
    briefly "Construction"
    described as {
      |Construction type.
    }
  }
} with {
  briefly "Project info"
  described as {
    |Construction project details.
  }
}
type DocumentSubmission is {
  documentType: String(1,100) with {
    briefly "Type"
    described as {
      |Document type.
    }
  }
  fileName: String(1,255) with {
    briefly "File"
    described as {
      |File name.
    }
  }
  uploadedAt: TimeStamp with {
    briefly "Uploaded"
    described as {
      |Upload time.
    }
  }
  reviewStatus: String(1,50) with {
    briefly "Status"
    described as {
      |Review status.
    }
  }
  submissionComments: String(1,1000)? with {
    briefly "Comments"
    described as {
      |Review comments.
    }
  }
} with {
  briefly "Document submission"
  described as {
    |Submitted plan or document.
  }
}
type PlanReview is {
  reviewType: String(1,100) with {
    briefly "Type"
    described as {
      |Review discipline.
    }
  }
  reviewerId: ReviewerId with {
    briefly "Reviewer"
    described as {
      |Assigned reviewer.
    }
  }
  reviewStatus: String(1,50) with {
    briefly "Status"
    described as {
      |Review status.
    }
  }
  reviewComments: String(1,1000)* with {
    briefly "Comments"
    described as {
      |Review comments.
    }
  }
  reviewCompletedAt: TimeStamp? with {
    briefly "Completed"
    described as {
      |Completion time.
    }
  }
} with {
  briefly "Plan review"
  described as {
    |Plan review record.
  }
}
type FeeInfo is {
  feeType: String(1,100) with {
    briefly "Type"
    described as {
      |Fee type.
    }
  }
  amount: Decimal(10,2) with {
    briefly "Amount"
    described as {
      |Fee amount.
    }
  }
  paidAt: TimeStamp? with {
    briefly "Paid"
    described as {
      |Payment time.
    }
  }
  feeReceiptNumber: String(1,50)? with {
    briefly "Receipt"
    described as {
      |Receipt number.
    }
  }
} with {
  briefly "Fee info"
  described as {
    |Permit fee record.
  }
}
type InspectionRecord is {
  inspectionId: InspectionId with {
    briefly "Inspection"
    described as {
      |Inspection identifier.
    }
  }
  inspectionType: InspectionType with {
    briefly "Type"
    described as {
      |Inspection type.
    }
  }
  inspectorId: InspectorId with {
    briefly "Inspector"
    described as {
      |Assigned inspector.
    }
  }
  scheduledDate: Date with {
    briefly "Scheduled"
    described as {
      |Scheduled date.
    }
  }
  inspectionStatus: InspectionStatus with {
    briefly "Status"
    described as {
      |Inspection result.
    }
  }
  conductedAt: TimeStamp? with {
    briefly "Conducted"
    described as {
      |Inspection time.
    }
  }
  inspectionComments: String(1,2000)? with {
    briefly "Comments"
    described as {
      |Inspector comments.
    }
  }
  requiredCorrections: String(1,500)* with {
    briefly "Corrections"
    described as {
      |Required corrections.
    }
  }
} with {
  briefly "Inspection record"
  described as {
    |Inspection documentation.
  }
}
type PermitCondition is {
  conditionType: String(1,100) with {
    briefly "Type"
    described as {
      |Condition type.
    }
  }
  description: String(1,1000) with {
    briefly "Description"
    described as {
      |Condition description.
    }
  }
  dueDate: Date? with {
    briefly "Due"
    described as {
      |Compliance due date.
    }
  }
  satisfied: Boolean with {
    briefly "Satisfied"
    described as {
      |Condition met.
    }
  }
} with {
  briefly "Permit condition"
  described as {
    |Permit approval condition.
  }
}
