// Fund Transfer - Shared Types
type TransferId is Id(TransferContext.Transfer)  with {
  briefly "Transfer identifier"
  described as {
    |Unique identifier for a fund transfer.
  }
}
type AccountId is UUID with {
  briefly "Account identifier"
  described as {
    |Reference to a bank account.
  }
}
type CustomerId is UUID with {
  briefly "Customer identifier"
  described as {
    |Reference to a customer.
  }
}
type TransferType is any of {
  Internal,
  DomesticWire,
  InternationalWire,
  ACH,
  RealTimePayment,
  BookTransfer
} with {
  briefly "Transfer type"
  described as {
    |Type of fund transfer.
  }
}
type TransferStatus is any of {
  Pending,
  Validated,
  Submitted,
  Processing,
  Completed,
  Failed,
  Cancelled,
  Returned
} with {
  briefly "Transfer status"
  described as {
    |Current transfer status.
  }
}
type TransferPriority is any of {
  Standard,
  SameDay,
  Express,
  Urgent
} with {
  briefly "Transfer priority"
  described as {
    |Transfer urgency level.
  }
}
type TransferInfo is {
  sourceAccountId: AccountId with {
    briefly "Source"
    described as {
      |Source account.
    }
  }
  amount: Decimal(15,2) with {
    briefly "Amount"
    described as {
      |Transfer amount.
    }
  }
  currency: String(1,3) with {
    briefly "Currency"
    described as {
      |Transfer currency.
    }
  }
  transferType: TransferType with {
    briefly "Type"
    described as {
      |Transfer type.
    }
  }
  priority: TransferPriority with {
    briefly "Priority"
    described as {
      |Transfer priority.
    }
  }
  memo: String(1,200)? with {
    briefly "Memo"
    described as {
      |Transfer memo.
    }
  }
  scheduledDate: Date? with {
    briefly "Scheduled"
    described as {
      |Scheduled date.
    }
  }
} with {
  briefly "Transfer information"
  described as {
    |Core transfer details.
  }
}
type DomesticRecipient is {
  accountNumber: String(1,20) with {
    briefly "Account"
    described as {
      |Account number.
    }
  }
  routingNumber: String(9,9) with {
    briefly "Routing"
    described as {
      |Routing number.
    }
  }
  accountHolderName: String(1,100) with {
    briefly "Name"
    described as {
      |Account holder name.
    }
  }
  bankName: String(1,100) with {
    briefly "Bank"
    described as {
      |Bank name.
    }
  }
} with {
  briefly "Domestic recipient"
  described as {
    |Domestic transfer recipient.
  }
}
type InternationalRecipient is {
  iban: String(1,34)? with {
    briefly "IBAN"
    described as {
      |International bank account number.
    }
  }
  accountNumber: String(1,30) with {
    briefly "Account"
    described as {
      |Account number.
    }
  }
  swiftCode: String(8,11) with {
    briefly "SWIFT"
    described as {
      |SWIFT/BIC code.
    }
  }
  accountHolderName: String(1,100) with {
    briefly "Name"
    described as {
      |Account holder name.
    }
  }
  bankName: String(1,100) with {
    briefly "Bank"
    described as {
      |Bank name.
    }
  }
  bankAddress: String(1,200) with {
    briefly "Address"
    described as {
      |Bank address.
    }
  }
  country: String(2,2) with {
    briefly "Country"
    described as {
      |Country code.
    }
  }
} with {
  briefly "International recipient"
  described as {
    |International transfer recipient.
  }
}
type TransferFees is {
  baseFee: Decimal(10,2) with {
    briefly "Base fee"
    described as {
      |Base transfer fee.
    }
  }
  expediteFee: Decimal(10,2)? with {
    briefly "Expedite"
    described as {
      |Expedite fee.
    }
  }
  internationalFee: Decimal(10,2)? with {
    briefly "International"
    described as {
      |International fee.
    }
  }
  totalFees: Decimal(10,2) with {
    briefly "Total"
    described as {
      |Total fees.
    }
  }
} with {
  briefly "Transfer fees"
  described as {
    |Fee breakdown for transfer.
  }
}
type ExchangeRate is {
  fromCurrency: String(1,3) with {
    briefly "From"
    described as {
      |Source currency.
    }
  }
  toCurrency: String(1,3) with {
    briefly "To"
    described as {
      |Target currency.
    }
  }
  rate: Decimal(12,6) with {
    briefly "Rate"
    described as {
      |Exchange rate.
    }
  }
  rateTime: TimeStamp with {
    briefly "Time"
    described as {
      |Rate timestamp.
    }
  }
} with {
  briefly "Exchange rate"
  described as {
    |Currency exchange rate.
  }
}
type TransferTracking is {
  referenceNumber: String(1,50) with {
    briefly "Reference"
    described as {
      |Reference number.
    }
  }
  trackedNetworkReference: String(1,50)? with {
    briefly "Network ref"
    described as {
      |Network reference.
    }
  }
  trackedSubmittedAt: TimeStamp? with {
    briefly "Submitted"
    described as {
      |Submission time.
    }
  }
  trackedProcessedAt: TimeStamp? with {
    briefly "Processed"
    described as {
      |Processing time.
    }
  }
  trackedCompletedAt: TimeStamp? with {
    briefly "Completed"
    described as {
      |Completion time.
    }
  }
} with {
  briefly "Transfer tracking"
  described as {
    |Transfer tracking information.
  }
}
type ReturnReason is {
  code: String(1,10) with {
    briefly "Code"
    described as {
      |Return code.
    }
  }
  description: String(1,200) with {
    briefly "Description"
    described as {
      |Return reason.
    }
  }
  returnedAt: TimeStamp with {
    briefly "Returned"
    described as {
      |Return time.
    }
  }
} with {
  briefly "Return reason"
  described as {
    |Transfer return details.
  }
}
