// Account Management - Shared Types
type AccountId is Id(AccountContext.Account)  with {
  briefly "Account identifier"
  described as {
    |Unique identifier for a bank account.
  }
}
type CustomerId is UUID with {
  briefly "Customer identifier"
  described as {
    |Reference to a customer.
  }
}
type TransactionId is UUID with {
  briefly "Transaction identifier"
  described as {
    |Reference to a transaction.
  }
}
type AccountType is any of {
  Checking,
  Savings,
  MoneyMarket,
  CertificateOfDeposit,
  BusinessChecking,
  BusinessSavings
} with {
  briefly "Account type"
  described as {
    |Type of bank account.
  }
}
type AccountStatus is any of {
  Pending,
  Active,
  Frozen,
  Dormant,
  Closed
} with {
  briefly "Account status"
  described as {
    |Current account status.
  }
}
type TransactionType is any of {
  Deposit,
  Withdrawal,
  Transfer,
  Payment,
  Fee,
  Interest,
  Adjustment,
  Reversal
} with {
  briefly "Transaction type"
  described as {
    |Type of account transaction.
  }
}
type TransactionStatus is any of {
  Pending,
  Completed,
  Failed,
  Reversed,
  Held
} with {
  briefly "Transaction status"
  described as {
    |Current transaction status.
  }
}
type AccountInfo is {
  accountNumber: String(1,20) with {
    briefly "Account number"
    described as {
      |Account number.
    }
  }
  accountType: AccountType with {
    briefly "Type"
    described as {
      |Account type.
    }
  }
  customerId: CustomerId with {
    briefly "Customer"
    described as {
      |Account holder.
    }
  }
  currency: String(1,3) with {
    briefly "Currency"
    described as {
      |Account currency.
    }
  }
  openedDate: Date with {
    briefly "Opened"
    described as {
      |Opening date.
    }
  }
  interestRate: Decimal(5,4)? with {
    briefly "Interest"
    described as {
      |Interest rate.
    }
  }
} with {
  briefly "Account information"
  described as {
    |Core account details.
  }
}
type AccountBalance is {
  available: Decimal(15,2) with {
    briefly "Available"
    described as {
      |Available balance.
    }
  }
  current: Decimal(15,2) with {
    briefly "Current"
    described as {
      |Current balance.
    }
  }
  pending: Decimal(15,2) with {
    briefly "Pending"
    described as {
      |Pending amount.
    }
  }
  asOf: TimeStamp with {
    briefly "As of"
    described as {
      |Balance timestamp.
    }
  }
} with {
  briefly "Account balance"
  described as {
    |Account balance details.
  }
}
type Transaction is {
  transactionId: TransactionId with {
    briefly "Transaction ID"
    described as {
      |Transaction identifier.
    }
  }
  transactionType: TransactionType with {
    briefly "Type"
    described as {
      |Transaction type.
    }
  }
  amount: Decimal(15,2) with {
    briefly "Amount"
    described as {
      |Transaction amount.
    }
  }
  currency: String(1,3) with {
    briefly "Currency"
    described as {
      |Transaction currency.
    }
  }
  description: String(1,200) with {
    briefly "Description"
    described as {
      |Transaction description.
    }
  }
  transactionStatus: TransactionStatus with {
    briefly "Transaction Status"
    described as {
      |Transaction status.
    }
  }
  referenceNumber: String(1,50)? with {
    briefly "Reference"
    described as {
      |Reference number.
    }
  }
  timestamp: TimeStamp with {
    briefly "Time"
    described as {
      |Transaction time.
    }
  }
} with {
  briefly "Transaction"
  described as {
    |Account transaction.
  }
}
type TransferDetails is {
  fromAccountId: AccountId with {
    briefly "From"
    described as {
      |Source account.
    }
  }
  toAccountId: AccountId with {
    briefly "To"
    described as {
      |Destination account.
    }
  }
  amount: Decimal(15,2) with {
    briefly "Amount"
    described as {
      |Transfer amount.
    }
  }
  memo: String(1,200)? with {
    briefly "Memo"
    described as {
      |Transfer memo.
    }
  }
} with {
  briefly "Transfer details"
  described as {
    |Account transfer information.
  }
}
type AccountHolder is {
  customerId: CustomerId with {
    briefly "Customer"
    described as {
      |Customer ID.
    }
  }
  relationship: String(1,50) with {
    briefly "Relationship"
    described as {
      |Account relationship.
    }
  }
  isPrimary: Boolean with {
    briefly "Primary"
    described as {
      |Is primary holder.
    }
  }
  addedDate: Date with {
    briefly "Added"
    described as {
      |Date added.
    }
  }
} with {
  briefly "Account holder"
  described as {
    |Account holder details.
  }
}
type AccountLimit is {
  limitType: String(1,50) with {
    briefly "Type"
    described as {
      |Limit type.
    }
  }
  dailyLimit: Decimal(15,2) with {
    briefly "Daily"
    described as {
      |Daily limit.
    }
  }
  monthlyLimit: Decimal(15,2) with {
    briefly "Monthly"
    described as {
      |Monthly limit.
    }
  }
  currentUsed: Decimal(15,2) with {
    briefly "Used"
    described as {
      |Amount used.
    }
  }
} with {
  briefly "Account limit"
  described as {
    |Transaction limits.
  }
}
type FeeSchedule is {
  feeType: String(1,50) with {
    briefly "Type"
    described as {
      |Fee type.
    }
  }
  feeAmount: Decimal(10,2) with {
    briefly "Fee Amount"
    described as {
      |Fee amount.
    }
  }
  frequency: String(1,20) with {
    briefly "Frequency"
    described as {
      |Fee frequency.
    }
  }
  waivable: Boolean with {
    briefly "Waivable"
    described as {
      |Can be waived.
    }
  }
} with {
  briefly "Fee schedule"
  described as {
    |Account fee details.
  }
}
