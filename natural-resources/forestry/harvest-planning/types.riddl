// Harvest Planning - Shared Types
type HarvestBlockId is Id(HarvestPlanningContext.HarvestBlock)  with {
  briefly "Harvest block identifier"
  described as {
    |Unique identifier for a harvest block.
  }
}
type StandId is UUID with {
  briefly "Stand identifier"
  described as {
    |Reference to a timber stand.
  }
}
type ContractorId is UUID with {
  briefly "Contractor identifier"
  described as {
    |Reference to a harvesting contractor.
  }
}
type PermitId is UUID with {
  briefly "Permit identifier"
  described as {
    |Reference to a harvest permit.
  }
}
type ReforestationPlanId is UUID with {
  briefly "Reforestation plan identifier"
  described as {
    |Reference to a reforestation plan.
  }
}
type BlockStatus is any of {
  Proposed,
  Assessed,
  Delineated,
  UnderReview,
  Approved,
  Scheduled,
  Harvesting,
  Completed,
  Reforesting,
  Rejected
} with {
  briefly "Block status"
  described as {
    |Harvest block lifecycle status.
  }
}
type TimberSpecies is any of {
  DouglasFir,
  WesternRedCedar,
  SitkaSpruce,
  WesternHemlock,
  LodgepolePine,
  PonderosaPine,
  WhiteSpruce,
  JackPine,
  Hardwood,
  MixedSpecies
} with {
  briefly "Timber species"
  described as {
    |Primary timber species in stand.
  }
}
type HarvestMethod is any of {
  ClearCut,
  SelectiveCut,
  ShelterWood,
  SeedTree,
  GroupSelection,
  SingleTreeSelection,
  VariableRetention
} with {
  briefly "Harvest method"
  described as {
    |Silvicultural harvest method.
  }
}
type TerrainClass is any of {
  Flat,
  Rolling,
  Moderate,
  Steep,
  VeryStep
} with {
  briefly "Terrain class"
  described as {
    |Terrain difficulty classification.
  }
}
type ReviewOutcome is any of {
  Approved,
  ConditionalApproval,
  RequiresChanges,
  Denied
} with {
  briefly "Review outcome"
  described as {
    |Environmental review decision.
  }
}
type StandAssessment is {
  standId: StandId with {
    briefly "Stand ID"
    described as {
      |Timber stand identifier.
    }
  }
  species: TimberSpecies with {
    briefly "Species"
    described as {
      |Dominant timber species.
    }
  }
  estimatedVolume: Decimal(10,2) with {
    briefly "Volume"
    described as {
      |Estimated timber volume in cubic meters.
    }
  }
  averageAge: Natural with {
    briefly "Age"
    described as {
      |Average stand age in years.
    }
  }
  averageDiameter: Decimal(6,2) with {
    briefly "Diameter"
    described as {
      |Average diameter at breast height in cm.
    }
  }
  siteIndex: Decimal(6,2) with {
    briefly "Site index"
    described as {
      |Site productivity index.
    }
  }
  terrain: TerrainClass with {
    briefly "Terrain"
    described as {
      |Terrain classification.
    }
  }
  assessedAt: Date with {
    briefly "Assessed"
    described as {
      |Date of assessment.
    }
  }
} with {
  briefly "Stand assessment"
  described as {
    |Timber stand survey results.
  }
}
type BlockBoundary is {
  areaHectares: Decimal(8,2) with {
    briefly "Area"
    described as {
      |Block area in hectares.
    }
  }
  boundaryPoints: String(1,100)+ with {
    briefly "Boundary"
    described as {
      |GPS boundary coordinates.
    }
  }
  accessRoad: String(1,200) with {
    briefly "Access"
    described as {
      |Primary access road.
    }
  }
  bufferZones: String(1,200)* with {
    briefly "Buffers"
    described as {
      |Required buffer zone descriptions.
    }
  }
} with {
  briefly "Block boundary"
  described as {
    |Harvest block geographic boundary.
  }
}
type EnvironmentalReview is {
  reviewId: UUID with {
    briefly "Review ID"
    described as {
      |Review identifier.
    }
  }
  reviewedBy: String(1,100) with {
    briefly "Reviewer"
    described as {
      |Reviewing officer name.
    }
  }
  outcome: ReviewOutcome with {
    briefly "Outcome"
    described as {
      |Review decision.
    }
  }
  conditions: String(1,500)* with {
    briefly "Conditions"
    described as {
      |Approval conditions.
    }
  }
  wildlifeImpact: String(1,500) with {
    briefly "Wildlife"
    described as {
      |Wildlife impact assessment.
    }
  }
  watershedImpact: String(1,500) with {
    briefly "Watershed"
    described as {
      |Watershed impact assessment.
    }
  }
  reviewDate: Date with {
    briefly "Reviewed"
    described as {
      |Review date.
    }
  }
} with {
  briefly "Environmental review"
  described as {
    |Environmental impact review details.
  }
}
type HarvestSchedule is {
  plannedStart: Date with {
    briefly "Start"
    described as {
      |Planned harvest start date.
    }
  }
  plannedEnd: Date with {
    briefly "End"
    described as {
      |Planned harvest end date.
    }
  }
  harvestMethod: HarvestMethod with {
    briefly "Method"
    described as {
      |Harvest method.
    }
  }
  contractorId: ContractorId with {
    briefly "Contractor"
    described as {
      |Assigned contractor.
    }
  }
  estimatedCost: Decimal(12,2) with {
    briefly "Cost"
    described as {
      |Estimated harvest cost.
    }
  }
  permitId: PermitId? with {
    briefly "Permit"
    described as {
      |Harvest permit reference.
    }
  }
} with {
  briefly "Harvest schedule"
  described as {
    |Harvest scheduling details.
  }
}
type ReforestationPlan is {
  planId: ReforestationPlanId with {
    briefly "Plan ID"
    described as {
      |Reforestation plan identifier.
    }
  }
  species: TimberSpecies with {
    briefly "Species"
    described as {
      |Replanting species.
    }
  }
  seedlingsPerHectare: Natural with {
    briefly "Density"
    described as {
      |Planting density per hectare.
    }
  }
  plannedPlantingDate: Date with {
    briefly "Planting date"
    described as {
      |Target planting date.
    }
  }
  survivalTarget: Decimal(5,2) with {
    briefly "Survival target"
    described as {
      |Target survival percentage.
    }
  }
  monitoringSchedule: String(1,200)+ with {
    briefly "Monitoring"
    described as {
      |Post-planting monitoring dates.
    }
  }
} with {
  briefly "Reforestation plan"
  described as {
    |Post-harvest reforestation details.
  }
}
