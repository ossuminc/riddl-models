// Log Tracking - Shared Types
type TimberLogId is Id(LogTrackingContext.TimberLog)  with {
  briefly "Timber log identifier"
  described as {
    |Unique identifier for a tracked timber log.
  }
}
type HarvestSiteId is UUID with {
  briefly "Harvest site identifier"
  described as {
    |Reference to a timber harvest site.
  }
}
type SawmillId is UUID with {
  briefly "Sawmill identifier"
  described as {
    |Reference to a destination sawmill.
  }
}
type TransportId is UUID with {
  briefly "Transport identifier"
  described as {
    |Reference to a transport shipment.
  }
}
type LogStatus is any of {
  Felled,
  Scaled,
  Loaded,
  InTransit,
  Delivered,
  Rejected,
  Quarantined
} with {
  briefly "Log status"
  described as {
    |Current status of a tracked log.
  }
}
type SpeciesType is any of {
  DouglasFir,
  WesternRedCedar,
  SitkaSpruce,
  WesternHemlock,
  PonderosaPine,
  LodgepolePine,
  WhiteOak,
  RedOak,
  HardMaple,
  SoftMaple,
  YellowBirch,
  BlackCherry,
  Walnut,
  OtherSpecies
} with {
  briefly "Tree species"
  described as {
    |Species of the harvested timber.
  }
}
type LogGrade is any of {
  Premium,
  SelectStructural,
  NumberOne,
  NumberTwo,
  NumberThree,
  Utility,
  Cull
} with {
  briefly "Log grade"
  described as {
    |Quality grade assigned during scaling.
  }
}
type MeasurementMethod is any of {
  Scribner,
  Doyle,
  InternationalQuarterInch,
  CubicMeter,
  JAS
} with {
  briefly "Measurement method"
  described as {
    |Log volume measurement method used.
  }
}
type FellingInfo is {
  logId: TimberLogId with {
    briefly "Log ID"
    described as {
      |Timber log identifier.
    }
  }
  harvestSiteId: HarvestSiteId with {
    briefly "Harvest site"
    described as {
      |Site where log was felled.
    }
  }
  species: SpeciesType with {
    briefly "Species"
    described as {
      |Tree species of the log.
    }
  }
  felledBy: String(3,100) with {
    briefly "Felled by"
    described as {
      |Person who felled the tree.
    }
  }
  felledAt: TimeStamp with {
    briefly "Felled at"
    described as {
      |Date and time of felling.
    }
  }
  gpsLatitude: Decimal(10,7) with {
    briefly "Latitude"
    described as {
      |GPS latitude of felling location.
    }
  }
  gpsLongitude: Decimal(10,7) with {
    briefly "Longitude"
    described as {
      |GPS longitude of felling location.
    }
  }
  harvestPermit: String(3,100) with {
    briefly "Permit"
    described as {
      |Harvest permit number.
    }
  }
} with {
  briefly "Felling information"
  described as {
    |Details of the log felling event.
  }
}
type ScalingMeasurement is {
  lengthMeters: Decimal(6,2) with {
    briefly "Length"
    described as {
      |Log length in meters.
    }
  }
  smallEndDiameterCm: Decimal(6,2) with {
    briefly "Small end"
    described as {
      |Small end diameter in centimeters.
    }
  }
  largeEndDiameterCm: Decimal(6,2) with {
    briefly "Large end"
    described as {
      |Large end diameter in centimeters.
    }
  }
  volumeCubicMeters: Decimal(8,4) with {
    briefly "Volume"
    described as {
      |Calculated volume in cubic meters.
    }
  }
  measurementMethod: MeasurementMethod with {
    briefly "Method"
    described as {
      |Volume calculation method used.
    }
  }
  grade: LogGrade with {
    briefly "Grade"
    described as {
      |Assigned log grade.
    }
  }
  defects: String(3,200)* with {
    briefly "Defects"
    described as {
      |Observed defects such as rot or sweep.
    }
  }
  scaledBy: String(3,100) with {
    briefly "Scaled by"
    described as {
      |Person performing the scaling.
    }
  }
  scaledAt: TimeStamp with {
    briefly "Scaled at"
    described as {
      |Date and time of scaling.
    }
  }
} with {
  briefly "Scaling measurement"
  described as {
    |Log measurement and grading data.
  }
}
type TransportInfo is {
  transportId: TransportId with {
    briefly "Transport ID"
    described as {
      |Transport shipment identifier.
    }
  }
  driverName: String(3,100) with {
    briefly "Driver"
    described as {
      |Name of the transport driver.
    }
  }
  truckNumber: String(3,50) with {
    briefly "Truck"
    described as {
      |Truck identification number.
    }
  }
  destinationMill: SawmillId with {
    briefly "Destination"
    described as {
      |Destination sawmill identifier.
    }
  }
  loadedAt: TimeStamp with {
    briefly "Loaded at"
    described as {
      |Date and time when loaded onto truck.
    }
  }
  estimatedArrival: TimeStamp with {
    briefly "ETA"
    described as {
      |Estimated arrival time at sawmill.
    }
  }
} with {
  briefly "Transport information"
  described as {
    |Log transport shipment details.
  }
}
type DeliveryRecord is {
  receivedBy: String(3,100) with {
    briefly "Received by"
    described as {
      |Person receiving at sawmill.
    }
  }
  deliveredAt: TimeStamp with {
    briefly "Delivered at"
    described as {
      |Delivery date and time.
    }
  }
  millGrade: LogGrade? with {
    briefly "Mill grade"
    described as {
      |Grade assigned at mill reception.
    }
  }
  millVolumeCubicMeters: Decimal(8,4)? with {
    briefly "Mill volume"
    described as {
      |Volume measured at mill.
    }
  }
  acceptanceNotes: String(3,500)? with {
    briefly "Notes"
    described as {
      |Mill acceptance notes.
    }
  }
} with {
  briefly "Delivery record"
  described as {
    |Sawmill delivery and acceptance record.
  }
}
type ComplianceDocument is {
  documentType: String(3,100) with {
    briefly "Type"
    described as {
      |Document type such as permit or certificate.
    }
  }
  documentNumber: String(3,100) with {
    briefly "Number"
    described as {
      |Document reference number.
    }
  }
  issuedBy: String(3,100) with {
    briefly "Issued by"
    described as {
      |Issuing authority.
    }
  }
  issuedAt: Date with {
    briefly "Issued"
    described as {
      |Date of issuance.
    }
  }
  expiresAt: Date? with {
    briefly "Expires"
    described as {
      |Expiration date if applicable.
    }
  }
  verified: Boolean with {
    briefly "Verified"
    described as {
      |Whether document has been verified.
    }
  }
} with {
  briefly "Compliance document"
  described as {
    |Regulatory compliance documentation.
  }
}
