// Store Operations - Shared Types
type StoreId is Id(StoreContext.Store)  with {
  briefly "Store identifier"
  described as {
    |Unique identifier for a retail store.
  }
}
type EmployeeId is UUID with {
  briefly "Employee identifier"
  described as {
    |Reference to an employee.
  }
}
type ShiftId is UUID with {
  briefly "Shift identifier"
  described as {
    |Reference to a work shift.
  }
}
type RegisterId is UUID with {
  briefly "Register identifier"
  described as {
    |Reference to a cash register.
  }
}
type Money is {
  amount: Decimal(10,2) with {
    briefly "Amount"
    described as {
      |Monetary value.
    }
  }
  currency: Currency(USD) with {
    briefly "Currency"
    described as {
      |Currency code.
    }
  }
} with {
  briefly "Monetary value"
  described as {
    |Amount with currency.
  }
}
type StoreStatus is any of {
  OpenStatus,
  ClosedStatus,
  TemporarilyClosedStatus
} with {
  briefly "Store status"
  described as {
    |Current operational status of the store.
  }
}
type ShiftInfo is {
  shiftId: ShiftId with {
    briefly "Shift ID"
    described as {
      |Shift identifier.
    }
  }
  employeeId: EmployeeId with {
    briefly "Employee"
    described as {
      |Assigned employee.
    }
  }
  startTime: TimeStamp with {
    briefly "Start"
    described as {
      |Shift start time.
    }
  }
  endTime: TimeStamp? with {
    briefly "End"
    described as {
      |Shift end time.
    }
  }
  position: String(1,100) with {
    briefly "Position"
    described as {
      |Role during shift.
    }
  }
} with {
  briefly "Shift information"
  described as {
    |Details of a work shift.
  }
}
type CashDrawer is {
  registerId: RegisterId with {
    briefly "Register"
    described as {
      |Register ID.
    }
  }
  openingBalance: Money with {
    briefly "Opening"
    described as {
      |Starting cash amount.
    }
  }
  currentBalance: Money with {
    briefly "Current"
    described as {
      |Current cash amount.
    }
  }
  expectedBalance: Money with {
    briefly "Expected"
    described as {
      |Expected based on sales.
    }
  }
  variance: Money with {
    briefly "Variance"
    described as {
      |Difference from expected.
    }
  }
} with {
  briefly "Cash drawer status"
  described as {
    |Current state of register cash.
  }
}
type DailySchedule is {
  date: Date with {
    briefly "Date"
    described as {
      |Schedule date.
    }
  }
  openingTime: Time with {
    briefly "Open"
    described as {
      |Store opening time.
    }
  }
  closingTime: Time with {
    briefly "Close"
    described as {
      |Store closing time.
    }
  }
  shifts: ShiftInfo+ with {
    briefly "Shifts"
    described as {
      |Scheduled shifts.
    }
  }
} with {
  briefly "Daily schedule"
  described as {
    |Store schedule for a day.
  }
}
type OperationalTask is {
  taskId: UUID with {
    briefly "Task ID"
    described as {
      |Task identifier.
    }
  }
  description: String(1,500) with {
    briefly "Description"
    described as {
      |Task description.
    }
  }
  assignedTo: EmployeeId? with {
    briefly "Assigned to"
    described as {
      |Assigned employee.
    }
  }
  dueTime: TimeStamp? with {
    briefly "Due"
    described as {
      |Due time.
    }
  }
  completed: Boolean with {
    briefly "Completed"
    described as {
      |Whether completed.
    }
  }
} with {
  briefly "Operational task"
  described as {
    |A task to be completed during operations.
  }
}
type IncidentReport is {
  incidentId: UUID with {
    briefly "Incident ID"
    described as {
      |Incident identifier.
    }
  }
  incidentType: IncidentType with {
    briefly "Type"
    described as {
      |Incident category.
    }
  }
  description: String(1,2000) with {
    briefly "Description"
    described as {
      |Incident details.
    }
  }
  reportedBy: EmployeeId with {
    briefly "Reported by"
    described as {
      |Reporting employee.
    }
  }
  reportedAt: TimeStamp with {
    briefly "Reported at"
    described as {
      |Report time.
    }
  }
} with {
  briefly "Incident report"
  described as {
    |Report of an operational incident.
  }
}
type IncidentType is any of {
  SafetyIncident,
  SecurityIncident,
  CustomerComplaint,
  EquipmentFailure,
  OtherIncident
} with {
  briefly "Incident type"
  described as {
    |Category of incident.
  }
}
