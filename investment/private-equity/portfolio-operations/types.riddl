// Portfolio Operations - Shared Types
type PortfolioCompanyId is Id(PortfolioOpsContext.PortfolioCompany)  with {
  briefly "Portfolio company identifier"
  described as {
    |Unique identifier for a portfolio company.
  }
}
type FundId is UUID with {
  briefly "Fund identifier"
  described as {
    |Reference to the PE fund owning the company.
  }
}
type InitiativeId is UUID with {
  briefly "Initiative identifier"
  described as {
    |Reference to a value creation initiative.
  }
}
type BoardMeetingId is UUID with {
  briefly "Board meeting identifier"
  described as {
    |Reference to a board meeting.
  }
}
type CompanyStatus is any of {
  Onboarding,
  Active,
  UnderReview,
  ExitReady,
  ExitInProgress,
  Exited,
  WrittenOff
} with {
  briefly "Company status"
  described as {
    |Portfolio company lifecycle status.
  }
}
type IndustrySegment is any of {
  Technology,
  Healthcare,
  Manufacturing,
  ConsumerGoods,
  FinancialServices,
  BusinessServices,
  IndustrialProducts,
  MediaEntertainment
} with {
  briefly "Industry segment"
  described as {
    |Industry classification of portfolio company.
  }
}
type InitiativeStatus is any of {
  Planned,
  InProgress,
  OnTrack,
  AtRisk,
  Completed,
  Abandoned
} with {
  briefly "Initiative status"
  described as {
    |Status of a value creation initiative.
  }
}
type ExitStrategy is any of {
  StrategicSale,
  SecondaryBuyout,
  InitialPublicOffering,
  Recapitalization,
  Management
} with {
  briefly "Exit strategy"
  described as {
    |Planned exit path for the portfolio company.
  }
}
type ExitReadiness is any of {
  NotReady,
  EarlyPreparation,
  ActivePreparation,
  MarketReady,
  InProcess
} with {
  briefly "Exit readiness"
  described as {
    |Current exit readiness assessment level.
  }
}
type FinancialMetrics is {
  revenue: Decimal(14,2) with {
    briefly "Revenue"
    described as {
      |Annual revenue.
    }
  }
  ebitda: Decimal(14,2) with {
    briefly "EBITDA"
    described as {
      |Earnings before interest, taxes, depreciation, amortization.
    }
  }
  ebitdaMargin: Decimal(5,2) with {
    briefly "EBITDA margin"
    described as {
      |EBITDA as percentage of revenue.
    }
  }
  netDebt: Decimal(14,2) with {
    briefly "Net debt"
    described as {
      |Total debt minus cash.
    }
  }
  leverageRatio: Decimal(5,2) with {
    briefly "Leverage ratio"
    described as {
      |Net debt to EBITDA ratio.
    }
  }
  freeCashFlow: Decimal(14,2) with {
    briefly "Free cash flow"
    described as {
      |Cash flow after capital expenditures.
    }
  }
  reportingPeriod: Date with {
    briefly "Period"
    described as {
      |Financial reporting period end date.
    }
  }
} with {
  briefly "Financial metrics"
  described as {
    |Key financial performance indicators.
  }
}
type OperationalKPI is {
  kpiName: String(3,100) with {
    briefly "KPI name"
    described as {
      |Name of the operational metric.
    }
  }
  currentValue: Decimal(14,4) with {
    briefly "Current"
    described as {
      |Current KPI value.
    }
  }
  targetValue: Decimal(14,4) with {
    briefly "Target"
    described as {
      |Target KPI value.
    }
  }
  unit: String(1,50) with {
    briefly "Unit"
    described as {
      |Unit of measurement.
    }
  }
  measuredAt: Date with {
    briefly "Measured"
    described as {
      |Measurement date.
    }
  }
} with {
  briefly "Operational KPI"
  described as {
    |An operational key performance indicator.
  }
}
type ValueCreationInitiative is {
  initiativeId: InitiativeId with {
    briefly "Initiative ID"
    described as {
      |Initiative identifier.
    }
  }
  title: String(3,200) with {
    briefly "Title"
    described as {
      |Initiative title.
    }
  }
  category: String(3,100) with {
    briefly "Category"
    described as {
      |Initiative category such as revenue growth or cost reduction.
    }
  }
  initiativeStatus: InitiativeStatus with {
    briefly "Initiative Status"
    described as {
      |Initiative status.
    }
  }
  targetImpact: Decimal(14,2) with {
    briefly "Target impact"
    described as {
      |Projected EBITDA impact.
    }
  }
  actualImpact: Decimal(14,2)? with {
    briefly "Actual impact"
    described as {
      |Realized EBITDA impact.
    }
  }
  owner: String(3,100) with {
    briefly "Owner"
    described as {
      |Person responsible for initiative.
    }
  }
  startDate: Date with {
    briefly "Start"
    described as {
      |Initiative start date.
    }
  }
  targetEndDate: Date with {
    briefly "Target end"
    described as {
      |Planned completion date.
    }
  }
} with {
  briefly "Value creation initiative"
  described as {
    |A specific initiative in the value creation plan.
  }
}
type BoardDirector is {
  directorName: String(3,100) with {
    briefly "Name"
    described as {
      |Director full name.
    }
  }
  role: String(3,100) with {
    briefly "Role"
    described as {
      |Director role such as Chairman or Independent.
    }
  }
  appointedDate: Date with {
    briefly "Appointed"
    described as {
      |Date appointed to board.
    }
  }
} with {
  briefly "Board director"
  described as {
    |A member of the portfolio company board.
  }
}
type BoardMeeting is {
  meetingId: BoardMeetingId with {
    briefly "Meeting ID"
    described as {
      |Board meeting identifier.
    }
  }
  meetingDate: Date with {
    briefly "Date"
    described as {
      |Meeting date.
    }
  }
  attendees: String(3,100)+ with {
    briefly "Attendees"
    described as {
      |Meeting attendees.
    }
  }
  resolutions: String(3,500)+ with {
    briefly "Resolutions"
    described as {
      |Meeting resolutions.
    }
  }
  nextMeetingDate: Date? with {
    briefly "Next meeting"
    described as {
      |Next scheduled meeting date.
    }
  }
} with {
  briefly "Board meeting"
  described as {
    |A board governance meeting record.
  }
}
type InvestmentSummary is {
  investedCapital: Decimal(14,2) with {
    briefly "Invested"
    described as {
      |Total capital invested.
    }
  }
  currentValuation: Decimal(14,2) with {
    briefly "Valuation"
    described as {
      |Current estimated valuation.
    }
  }
  multipleOnInvested: Decimal(5,2) with {
    briefly "MOIC"
    described as {
      |Multiple on invested capital.
    }
  }
  internalRateOfReturn: Decimal(5,2)? with {
    briefly "IRR"
    described as {
      |Internal rate of return.
    }
  }
  holdingPeriodYears: Decimal(4,1) with {
    briefly "Holding period"
    described as {
      |Years since acquisition.
    }
  }
} with {
  briefly "Investment summary"
  described as {
    |Investment performance summary.
  }
}
